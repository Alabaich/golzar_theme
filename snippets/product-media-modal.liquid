<style>
  .product-media-gallery-{{ section.id }} {
    position: relative;
    height: 100%;
    width: 100%;
    z-index: 1;
  }
  
  .product-media-slider-arrow-{{ section.id }} svg,
  .product-media-slider-arrow-{{ section.id }} path {
    pointer-events: none;
  }
  
  .product-media-thumbs-{{ section.id }} {
    position: absolute;
    left: -45px;
    top: 50%;
    transform: translateY(-50%);
    width: 100px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-height: 80%;
    overflow-y: auto;
    padding: 10px;
    z-index: 20;
  }
  
  .product-media-thumb-{{ section.id }} {
    width: 80px;
    height: 80px;
    border: 2px solid transparent;
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
    opacity: 0.7;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }
  
  .product-media-thumb-{{ section.id }}.active {
    border-color: #000;
    opacity: 1;
  }
  
  .product-media-thumb-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }
  
  .product-media-thumb-icon-{{ section.id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
    pointer-events: none;
  }
  
  .product-media-slider-{{ section.id }} {
    position: relative;
    height: 100%;
    width: 100%;
    margin-left: 120px;
    overflow: hidden;
  }
  
  .product-media-slide-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 0;
  }
  
  .product-media-slide-{{ section.id }}.active {
    opacity: 1;
    position: relative;
    pointer-events: auto;
    z-index: 1;
  }
  
  .product-media-slider-arrow-{{ section.id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: rgba(255,255,255,0.95);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 1000;
    box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  }
  
  .product-media-slider-arrow-{{ section.id }}:hover {
    background: #fff;
    transform: translateY(-50%) scale(1.1);
  }
  
  .product-media-slider-arrow-{{ section.id }}.prev {
    left: 135px;
  }
  
  .product-media-slider-arrow-{{ section.id }}.next {
    right: 100px;
  }
  
  .product-media-slider-arrow-{{ section.id }} svg {
    width: 20px;
    height: 20px;
  }

  @media screen and (max-width: 750px) {
    .product-media-modal__content > *:not(.active) {
      display: block !important;
    }

    .product-media-thumbs-{{ section.id }} {
      position: absolute;
      left: 50%;
      top: 100px;
      transform: translateX(-50%);
      width: 100%;
      display: flex;
      flex-direction: row;
      gap: 10px;
      max-height: 80%;
      overflow-x: auto;
      padding: 10px;
      z-index: 20;
    }

    .product-media-slider-arrow-{{ section.id }}.prev {
      left: 25px;
    }
    
    .product-media-slider-arrow-{{ section.id }}.next {
      right: 25px;
    }
  }
</style>

<product-modal id="ProductModal-{{ section.id }}" class="product-media-modal media-modal">
  <div
    class="product-media-modal__dialog"
    role="dialog"
    aria-label="{{ 'products.modal.label' | t }}"
    aria-modal="true"
    tabindex="-1"
  >
    <button
      id="ModalClose-{{ section.id }}"
      type="button"
      class="product-media-modal__toggle"
      aria-label="{{ 'accessibility.close' | t }}"
    >
      {{ 'icon-close.svg' | inline_asset_content }}
    </button>

    <div class="product-media-modal__content">
      <div class="product-media-gallery-{{ section.id }}" onclick="event.stopPropagation()">
        <div class="product-media-thumbs-{{ section.id }}">
          {%- for media in product.media -%}
            <div 
                class="product-media-thumb-{{ section.id }}{% if forloop.first %} active{% endif %}" 
                onclick="event.preventDefault(); event.stopPropagation(); window.handleGalleryChange('{{ section.id }}', {{ forloop.index0 }})"
                data-index="{{ forloop.index0 }}"
            >
              {%- if media.media_type == 'image' -%}
                <img
                  src="{{ media | image_url: width: 100 }}"
                  alt="{{ media.alt | escape }}"
                  loading="lazy"
                  width="80"
                  height="{{ 80 | divided_by: media.preview_image.aspect_ratio | ceil }}"
                >
              {%- else -%}
                <div class="product-media-thumb-icon-{{ section.id }}">
                  {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
                    {{ 'icon-play.svg' | inline_asset_content }}
                  {%- elsif media.media_type == 'model' -%}
                    {{ 'icon-3d-model' | inline_asset_content }}
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>

        <div class="product-media-slider-{{ section.id }}">
          {%- for media in product.media -%}
            <div class="product-media-slide-{{ section.id }}{% if forloop.first %} active{% endif %}" data-media-id="{{ media.id }}">
              {% render 'product-media', media: media, loop: section.settings.enable_video_looping %}
            </div>
          {%- endfor -%}
          
          {% if product.media.size > 1 %}
            <button type="button" class="product-media-slider-arrow-{{ section.id }} prev" onclick="event.preventDefault(); event.stopPropagation(); window.handleGalleryChange('{{ section.id }}', 'prev')" aria-label="{{ 'general.slider.previous_slide' | t }}">
              <svg width="24" height="24" viewBox="0 0 24 24"><path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" fill="none"/></svg>
            </button>
            <button type="button" class="product-media-slider-arrow-{{ section.id }} next" onclick="event.preventDefault(); event.stopPropagation(); window.handleGalleryChange('{{ section.id }}', 'next')" aria-label="{{ 'general.slider.next_slide' | t }}">
              <svg width="24" height="24" viewBox="0 0 24 24"><path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" fill="none"/></svg>
            </button>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</product-modal>

<script>
  window.handleGalleryChange = function(sectionId, action) {
    const modal = document.querySelector('#ProductModal-' + sectionId);
    if (!modal) return;

    const slides = modal.querySelectorAll('.product-media-slide-' + sectionId);
    const thumbs = modal.querySelectorAll('.product-media-thumb-' + sectionId);
    
    let currentIndex = 0;
    slides.forEach((slide, index) => {
      if (slide.classList.contains('active')) currentIndex = index;
    });

    let newIndex = currentIndex;

    if (action === 'prev') {
      newIndex = (currentIndex - 1 + slides.length) % slides.length;
    } else if (action === 'next') {
      newIndex = (currentIndex + 1) % slides.length;
    } else if (typeof action === 'number') {
      newIndex = action;
    }

    slides.forEach((slide, i) => {
      if (i === newIndex) slide.classList.add('active');
      else slide.classList.remove('active');
    });

    thumbs.forEach((thumb, i) => {
      if (i === newIndex) thumb.classList.add('active');
      else thumb.classList.remove('active');
    });
  };
</script>