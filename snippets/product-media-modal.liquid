<script>
(function() {
  const sectionId = "{{ section.id }}";

  function changeSlide(directionOrIndex) {
    const modal = document.querySelector('#ProductModal-' + sectionId);
    if (!modal || !modal.open) return;

    const slides = modal.querySelectorAll('.product-media-slide-' + sectionId);
    const thumbs = modal.querySelectorAll('.product-media-thumb-' + sectionId);

    let currentIndex = 0;
    slides.forEach((slide, i) => {
      if (slide.classList.contains('active')) currentIndex = i;
    });

    let newIndex;
    if (directionOrIndex === 'prev') {
      newIndex = (currentIndex - 1 + slides.length) % slides.length;
    } else if (directionOrIndex === 'next') {
      newIndex = (currentIndex + 1) % slides.length;
    } else {
      newIndex = parseInt(directionOrIndex, 10);
    }

    slides.forEach((slide, i) => slide.classList.toggle('active', i === newIndex));
    thumbs.forEach((thumb, i) => thumb.classList.toggle('active', i === newIndex));
  }

  function initClickHandler() {
    const content = document.getElementById('ProductModalContent-' + sectionId);
    if (!content) return;

    content.addEventListener('click', function(e) {
      e.stopPropagation();
      e.stopImmediatePropagation();

      const prevArrow = e.target.closest('.product-media-slider-arrow-' + sectionId + '.prev');
      const nextArrow = e.target.closest('.product-media-slider-arrow-' + sectionId + '.next');
      const thumb = e.target.closest('.product-media-thumb-' + sectionId);

      if (prevArrow) {
        changeSlide('prev');
        return;
      }
      if (nextArrow) {
        changeSlide('next');
        return;
      }
      if (thumb) {
        const index = thumb.getAttribute('data-index');
        changeSlide(index);
        return;
      }
    }, true);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initClickHandler);
  } else {
    initClickHandler();
  }
})();
</script>