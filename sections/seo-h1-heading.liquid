<div class="page-width" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; text-align: {{ section.settings.text_alignment }};">
  {%- if section.settings.heading != blank -%}
    {%- if section.settings.is_hidden -%}
      <h1 style="position: absolute; width: 1px; height: 1px; margin: -1px; padding: 0; overflow: hidden; clip: rect(0, 0, 0, 0); border: 0;">
        {{ section.settings.heading | escape }}
      </h1>
    {%- else -%}
      <h1 class="h1">
        {{ section.settings.heading | escape }}
      </h1>
    {%- endif -%}
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "SEO H1 Heading",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading Text"
      },
      {
        "type": "checkbox",
        "id": "is_hidden",
        "label": "Visually Hide (SEO only)",
        "default": true
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "SEO H1 Heading"
      }
    ]
  }
{% endschema %}