<style>
  .discover-products-{{ section.id }} {
    padding: 4rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  .discover-products-{{ section.id }}
  __header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .discover-products-{{ section.id }}
  __title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.title_color }};
  }

  .discover-products-{{ section.id }}
  __grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 300px);
    gap: 15px;
  }

  .discover-product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    transition: transform 0.3s;
  }

  .discover-product-img:hover {
    transform: scale(1.03);
  }

  /* Жесткие позиции для 6 картинок */
  .discover-product-1 {
    grid-column: 1 / 3;
    grid-row: 1;
  }

  .discover-product-2 {
    grid-column: 3;
    grid-row: 1;
  }

  .discover-product-3 {
    grid-column: 4;
    grid-row: 1;
  }

  .discover-product-4 {
    grid-column: 1;
    grid-row: 2;
  }

  .discover-product-5 {
    grid-column: 2;
    grid-row: 2;
  }

  .discover-product-6 {
    grid-column: 3 / 5;
    grid-row: 2;
  }

  @media (max-width: 768px) {
    .discover-products-{{ section.id }}__grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(6, 250px);
    }

    [class^="discover-product-"] {
      grid-column: 1 !important;
      grid-row: auto !important;
    }
  }
</style>

<section class="discover-products-{{ section.id }} page-width">
  <div class="discover-products-{{ section.id }}__header">
    <h2 class="discover-products-{{ section.id }}__title">{{ section.settings.title | escape }}</h2>
  </div>

  <div class="discover-products-{{ section.id }}__grid">
    {% for i in (1..6) %}
      <div class="discover-product-{{ i }}">
        {% assign image_setting_id = 'image_' | append: i %}
        {% assign current_image = section.settings[image_setting_id] %}
        {% if current_image != blank %}
          <img
            src="{{ current_image | img_url: '800x' }}"
            alt="{{ current_image.alt | default: section.settings.title | escape | append: ' - Image ' | append: i }}"
            class="discover-product-img"
            loading="lazy">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'discover-product-img' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "6-Image Grid Gallery",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Discover products in a real-life setting"
      }, {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#333333"
      }, {
        "type": "header",
        "content": "Image Uploads"
      },
      {% for i in (1..6) %}
        {
          "type": "image_picker",
          "id": "image_{{ i }}",
          "label": "Image {{ i }}"
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "presets": [
      {
        "name": "6-Image Grid Gallery",
        "category": "Image"
      }
    ]
  }
{% endschema %}