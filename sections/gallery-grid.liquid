<style>
  .fixed-grid-layout-{{ section.id }} {
    padding: 2rem 0;
  }

  .fixed-grid-layout-{{ section.id }}
  __header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .fixed-grid-layout-{{ section.id }}
  __title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.title_color }};
  }

  .fixed-grid-layout-{{ section.id }}
  __grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 300px);
    grid-column-gap: {{ section.settings.gap_horizontal }}px;
    grid-row-gap: {{ section.settings.gap_vertical }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .fixed-grid-layout-{{ section.id }}
  __grid-item {
    overflow: hidden;
  }

  .fixed-grid-layout-{{ section.id }}
  __grid-item img
  , .fixed-grid-layout-{{ section.id }}
  __grid-item .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .fixed-grid-layout-{{ section.id }}__grid-item img:hover {
    transform: scale(1.05);
  }

  .fixed-grid-layout-{{ section.id }}
  __grid-item--1 {
    grid-area: 1 / 1 / 2 / 3;
  }
  .fixed-grid-layout-{{ section.id }}
  __grid-item--2 {
    grid-area: 1 / 3 / 2 / 4;
  }
  .fixed-grid-layout-{{ section.id }}
  __grid-item--3 {
    grid-area: 1 / 4 / 2 / 5;
  }
  .fixed-grid-layout-{{ section.id }}
  __grid-item--4 {
    grid-area: 2 / 1 / 3 / 2;
  }
  .fixed-grid-layout-{{ section.id }}
  __grid-item--5 {
    grid-area: 2 / 2 / 3 / 3;
  }
  .fixed-grid-layout-{{ section.id }}
  __grid-item--6 {
    grid-area: 2 / 3 / 3 / 5;
  }

  @media (max-width: 768px) {
    .fixed-grid-layout-{{ section.id }}__grid-container {
      grid-template-columns: 1fr;
      grid-template-rows: repeat({{ section.blocks.size | at_most: 6 }}, 250px);
      grid-column-gap: {{ section.settings.gap_vertical }}px;
      grid-row-gap: {{ section.settings.gap_vertical }}px;
    }

    .fixed-grid-layout-{{ section.id }}
    __grid-item--1
    , .fixed-grid-layout-{{ section.id }}
    __grid-item--2
    , .fixed-grid-layout-{{ section.id }}
    __grid-item--3
    , .fixed-grid-layout-{{ section.id }}
    __grid-item--4
    , .fixed-grid-layout-{{ section.id }}
    __grid-item--5
    , .fixed-grid-layout-{{ section.id }}
    __grid-item--6 {
      grid-area: auto;
    }
  }
</style>

<section class="fixed-grid-layout-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.custom_text_title != blank -%}
      <div class="fixed-grid-layout-{{ section.id }}__header">
        <h2 class="fixed-grid-layout-{{ section.id }}__title">{{ section.settings.custom_text_title | escape }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="fixed-grid-layout-{{ section.id }}__grid-container">
        {%- for block in section.blocks limit: 6 -%}
          <div class="fixed-grid-layout-{{ section.id }}__grid-item fixed-grid-layout-{{ section.id }}__grid-item--{{ forloop.index }}" {{ block.shopify_attributes }}>
            {%- if block.settings.gallery_image != blank -%}
              <img
                src="{{ block.settings.gallery_image | img_url: '1024x' }}"
                alt="{{ block.settings.gallery_image.alt | default: block.settings.alt_text | default: section.settings.custom_text_title | escape | append: ' - ' | append: forloop.index }}"
                loading="lazy"
                width="{{ block.settings.gallery_image.width }}"
                height="{{ block.settings.gallery_image.height }}">
            {%- else -%}
              {%- capture placeholder_classes -%}
                fixed-grid-layout-{{ section.id }}__grid-item--{{ forloop.index }} placeholder-svg
              {%- endcapture -%}
              {{ 'image' | placeholder_svg_tag: placeholder_classes }}
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
  {
    "name": "6 Image Fixed Grid",
    "tag": "section",
    "class": "section-fixed-grid-layout",
    "max_blocks": 6,
    "settings": [
      {
        "type": "text",
        "id": "custom_text_title",
        "label": "Title",
        "default": "Discover products in a real-life setting"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#333333"
      },
      {
        "type": "range",
        "id": "gap_horizontal",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Horizontal Gap",
        "default": 0
      },
      {
        "type": "range",
        "id": "gap_vertical",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Vertical Gap",
        "default": 0
      }, {
        "type": "range",
        "id": "image_border_radius",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Image Border Radius",
        "default": 0
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "gallery_image",
        "settings": [
          {
            "type": "image_picker",
            "id": "gallery_image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "alt_text",
            "label": "Alt Text (Optional)",
            "info": "Overrides default image alt text."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "6 Image Fixed Grid",
        "category": "Image",
        "blocks": [
          {
            "type": "gallery_image"
          },
          {
            "type": "gallery_image"
          },
          {
            "type": "gallery_image"
          },
          {
            "type": "gallery_image"
          }, {
            "type": "gallery_image"
          }, {
            "type": "gallery_image"
          }
        ]
      }
    ]
  }
{% endschema %}