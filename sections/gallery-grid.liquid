<style>
  .discover-products-{{ section.id }} {
    padding: 4rem 0;
  }

  .discover-products-{{ section.id }}
  __header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .discover-products-{{ section.id }}
  __title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.title_color }};
  }

  .discover-products-{{ section.id }}
  __subtitle {
    font-size: 1.2rem;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 2rem;
  }

  .discover-products-{{ section.id }}
  __grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    grid-auto-rows: 240px;
    grid-gap: 20px;
    grid-auto-flow: dense;
  }

  .discover-product-image {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .discover-product-image:hover {
    transform: scale(1.02);
  }

  .discover-product-image__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .discover-product-image--large {
    grid-column: span 2;
  }

  .discover-product-image--tall {
    grid-row: span 2;
  }

  @media (max-width: 768px) {
    .discover-products-{{ section.id }}__grid {
      grid-template-columns: 1fr;
    }

    .discover-product-image--large,
    .discover-product-image--tall {
      grid-column: span 1;
      grid-row: span 1;
    }

    .discover-products-{{ section.id }}
    __title {
      font-size: 2rem;
    }
  }
</style>

<section class="discover-products-{{ section.id }} page-width">
  <div class="discover-products-{{ section.id }}__header">
    <h2 class="discover-products-{{ section.id }}__title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="discover-products-{{ section.id }}__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="discover-products-{{ section.id }}__grid">
    {% for block in section.blocks %}
      <div class="discover-product-image {% if block.settings.size == 'large' %}discover-product-image--large{% elsif block.settings.size == 'tall' %}discover-product-image--tall{% endif %}">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: '1000x' }}"
            alt="{{ block.settings.image.alt }}"
            class="discover-product-image__img">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'discover-product-image__img' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Discover Products Gallery",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Discover products in a real-life setting"
      }, {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#333333"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "See how our products fit perfectly in everyday spaces"
      }, {
        "type": "color",
        "id": "subtitle_color",
        "label": "Subtitle color",
        "default": "#666666"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "select",
            "id": "size",
            "label": "Image Size",
            "options": [
              {
                "value": "regular",
                "label": "Regular"
              }, {
                "value": "large",
                "label": "Large (2 columns)"
              }, {
                "value": "tall",
                "label": "Tall (2 rows)"
              }
            ],
            "default": "regular"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Products Masonry Gallery",
        "category": "Image",
        "blocks": [
          {
            "type": "image",
            "settings": {
              "size": "large"
            }
          }, {
            "type": "image",
            "settings": {
              "size": "tall"
            }
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}