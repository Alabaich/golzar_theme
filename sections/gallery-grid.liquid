<style>
  .discover-products-{{ section.id }} {
    padding: 4rem 0;
  }

  .discover-products-{{ section.id }}
  __header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .discover-products-{{ section.id }}
  __title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.title_color }};
  }

  .discover-products-{{ section.id }}
  __subtitle {
    font-size: 1.2rem;
    color: {{ section.settings.subtitle_color }};
  }

  .discover-products-{{ section.id }}
  __grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    grid-auto-rows: 240px;
    grid-gap: 20px;
    grid-auto-flow: dense;
  }

  .discover-product-card {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .discover-product-card:hover {
    transform: translateY(-5px);
  }

  .discover-product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .discover-product-card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    color: white;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .discover-product-card__overlay h3 {
    margin: 0 0 1rem;
    font-size: 1.4rem;
  }

  .discover-product-card__overlay .button {
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: 0.6rem 1.2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
  }

  .discover-product-card--large {
    grid-column: span 2;
  }

  .discover-product-card--tall {
    grid-row: span 2;
  }

  @media (max-width: 768px) {
    .discover-products-{{ section.id }}__grid {
      grid-template-columns: 1fr;
    }

    .discover-product-card--large,
    .discover-product-card--tall {
      grid-column: span 1;
      grid-row: span 1;
    }

    .discover-products-{{ section.id }}
    __title {
      font-size: 2rem;
    }
  }
</style>

<section class="discover-products-{{ section.id }} page-width">
  <div class="discover-products-{{ section.id }}__header">
    <h2 class="discover-products-{{ section.id }}__title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="discover-products-{{ section.id }}__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="discover-products-{{ section.id }}__grid">
    {% for block in section.blocks %}
      <div class="discover-product-card {% if block.settings.size == 'large' %}discover-product-card--large{% elsif block.settings.size == 'tall' %}discover-product-card--tall{% endif %}">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: '800x' }}"
            alt="{{ block.settings.image.alt }}"
            class="discover-product-card__image">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'discover-product-card__image' }}
        {% endif %}
        <div class="discover-product-card__overlay">
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button_label }}</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Image Gallery",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Discover products in a real-life setting"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#333333"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "See how our products fit perfectly in everyday spaces"
      },
      {
        "type": "color",
        "id": "subtitle_color",
        "label": "Subtitle color",
        "default": "#666666"
      }, {
        "type": "color",
        "id": "button_color",
        "label": "Button color",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
        "default": "#000000"
      }
    ],
    "blocks": [
      {
        "type": "product_card",
        "name": "Product Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Card Title",
            "default": "Product Collection"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }, {
            "type": "select",
            "id": "size",
            "label": "Card Size",
            "options": [
              {
                "value": "regular",
                "label": "Regular"
              }, {
                "value": "large",
                "label": "Large (2 columns)"
              }, {
                "value": "tall",
                "label": "Tall (2 rows)"
              }
            ],
            "default": "regular"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Gallery",
        "category": "Custom",
        "blocks": [
          {
            "type": "product_card",
            "settings": {
              "title": "Living Room",
              "button_label": "Shop Now",
              "size": "large"
            }
          }, {
            "type": "product_card",
            "settings": {
              "title": "Kitchen",
              "button_label": "View Products"
            }
          }, {
            "type": "product_card",
            "settings": {
              "title": "Bedroom",
              "button_label": "Explore",
              "size": "tall"
            }
          }, {
            "type": "product_card",
            "settings": {
              "title": "Office",
              "button_label": "Discover"
            }
          }
        ]
      }
    ]
  }
{% endschema %}