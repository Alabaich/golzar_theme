<style>
  .new-image-grid-{{ section.id }} {
    padding: 4rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  .new-image-grid-{{ section.id }}
  __header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .new-image-grid-{{ section.id }}
  __title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.title_color }};
  }

  .new-image-grid-{{ section.id }}
  __grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    /* Как вы указали. Высота строк будет зависеть от контента или высоты контейнера. */
    /* Для предсказуемости можно задать, например, grid-template-rows: repeat(2, 300px); */
    /* или дать .new-image-grid-{{ section.id }}__grid-container явную высоту. */
    grid-column-gap: 0;
    grid-row-gap: 0;
    /* Если grid-container не имеет определенной высоты, строки 1fr могут быть очень маленькими. */
    /* Рекомендуется, чтобы изображения имели некоторую внутреннюю высоту или контейнер имел высоту. */
    /* Для примера, можно задать минимальную высоту для строк или контейнера: */
    /* min-height: 600px; /* Пример для контейнера */
  }

  .new-image-grid-{{ section.id }}
  __grid-item .grid-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    /* Убирает лишние отступы под img, если есть */
    transition: transform 0.3s ease;
  }
  .new-image-grid-{{ section.id }}__grid-item .grid-image:hover {
    transform: scale(1.03);
  }


  /* Применение grid-area к соответствующим элементам */
  .new-image-grid-{{ section.id }}__grid-item--1 {
    grid-area: 1 / 1 / 2 / 3;
  }
  .new-image-grid-{{ section.id }}
  __grid-item--2 {
    grid-area: 1 / 3 / 2 / 4;
  }
  .new-image-grid-{{ section.id }}
  __grid-item--3 {
    grid-area: 1 / 4 / 2 / 5;
  }
  .new-image-grid-{{ section.id }}
  __grid-item--4 {
    grid-area: 2 / 1 / 3 / 2;
  }
  .new-image-grid-{{ section.id }}
  __grid-item--5 {
    grid-area: 2 / 2 / 3 / 3;
  }
  .new-image-grid-{{ section.id }}
  __grid-item--6 {
    grid-area: 2 / 3 / 3 / 5;
  }

  @media (max-width: 768px) {
    .new-image-grid-{{ section.id }}__grid-container {
      grid-template-columns: 1fr;
      /* Один столбец на мобильных */
      grid-template-rows: repeat(6, 250px);
      /* Каждое изображение в своей строке, высота 250px */
      /* или grid-auto-rows: 250px; если не используется grid-area */
      gap: 10px;
      /* Можно добавить небольшой отступ на мобильных, если 0px слишком плотно */
    }

    /* Сброс grid-area для мобильных устройств, чтобы изображения шли по порядку */
    .new-image-grid-{{ section.id }}__grid-item--1
    , .new-image-grid-{{ section.id }}
    __grid-item--2
    , .new-image-grid-{{ section.id }}
    __grid-item--3
    , .new-image-grid-{{ section.id }}
    __grid-item--4
    , .new-image-grid-{{ section.id }}
    __grid-item--5
    , .new-image-grid-{{ section.id }}
    __grid-item--6 {
      grid-area: auto;
      /* Позволяет элементам располагаться автоматически в потоке */
    }
  }
</style>

<section class="new-image-grid-{{ section.id }} page-width">
  <div class="new-image-grid-{{ section.id }}__header">
    {% if section.settings.title != blank %}
      <h2 class="new-image-grid-{{ section.id }}__title">{{ section.settings.title | escape }}</h2>
    {% endif %}
  </div>

  <div class="new-image-grid-{{ section.id }}__grid-container">
    {% for i in (1..6) %}
      {% assign image_setting_key = 'image_' | append: i %}
      {% assign current_image = section.settings[image_setting_key] %}
      {% assign placeholder_class = 'new-image-grid-{{ section.id }}__grid-item--' | append: i %}

      <div class="new-image-grid-{{ section.id }}__grid-item new-image-grid-{{ section.id }}__grid-item--{{ i }}">
        {% if current_image != blank %}
          <img
            src="{{ current_image | img_url: '1000x' }}"
            alt="{{ current_image.alt | default: section.settings.title | escape | append: ' - Image ' | append: i }}"
            class="grid-image"
            loading="lazy"
            width="{{ current_image.width }}"
            height="{{ current_image.height }}">
        {% else %}
          {% capture svg_placeholder_classes %}{{ placeholder_class }} grid-image placeholder{% endcapture %}
          {{ 'image' | placeholder_svg_tag: svg_placeholder_classes }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "6 Image Grid Layout",
    "settings": [
        {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Our Image Gallery"
      }, {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#333333"
      }, {
        "type": "header",
        "content": "Image Uploads"
      }, {
        "type": "paragraph",
        "content": "Upload up to 6 images for the grid."
      }
      {% for i in (1..6) %}, {
          "type": "image_picker",
          "id": "image_{{ i }}",
          "label": "Image {{ i }}"
        }
        {% endfor %}
      ],
      "presets": [
        {
          "name": "6 Image Grid Layout",
          "category": "Image"
        }
      ]
    }
{% endschema %}