<style>
  .discover-products-{{ section.id }} {
    padding: 4rem 0;
  }

  .discover-products-{{ section.id }}
  __header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .discover-products-{{ section.id }}
  __title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.title_color }};
  }

  .discover-products-{{ section.id }}
  __subtitle {
    font-size: 1.2rem;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 2rem;
  }

  .discover-products-{{ section.id }}
  __grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 0;
    grid-row-gap: 0;
    height: 600px;
  }

  .discover-product-image {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .discover-product-image:hover {
    transform: scale(1.02);
    z-index: 2;
  }

  .discover-product-image__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .discover-product-image-1 {
    grid-area: 1 / 1 / 2 / 3;
  }

  .discover-product-image-2 {
    grid-area: 2 / 2 / 3 / 3;
  }

  .discover-product-image-3 {
    grid-area: 2 / 1 / 3 / 2;
  }

  .discover-product-image-4 {
    grid-area: 1 / 3 / 2 / 4;
  }

  .discover-product-image-5 {
    grid-area: 1 / 4 / 2 / 5;
  }

  .discover-product-image-6 {
    grid-area: 2 / 3 / 3 / 5;
  }

  @media (max-width: 768px) {
    .discover-products-{{ section.id }}__grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      height: auto;
    }

    .discover-product-image {
      grid-area: auto !important;
      height: 300px;
    }
  }
</style>

<section class="discover-products-{{ section.id }} page-width">
  <div class="discover-products-{{ section.id }}__header">
    <h2 class="discover-products-{{ section.id }}__title">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="discover-products-{{ section.id }}__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="discover-products-{{ section.id }}__grid">
    {% for block in section.blocks %}
      <div class="discover-product-image discover-product-image-{{ forloop.index }}">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: '1000x' }}"
            alt="{{ block.settings.image.alt }}"
            class="discover-product-image__img">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'discover-product-image__img' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Products Masonry Grid",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Discover products in a real-life setting"
      }, {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#333333"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "See how our products fit perfectly in everyday spaces"
      }, {
        "type": "color",
        "id": "subtitle_color",
        "label": "Subtitle color",
        "default": "#666666"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Products Masonry Grid",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}