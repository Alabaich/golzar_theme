{%- liquid
  assign section_id = 'contact-us-' | append: section.id
-%}

{% style %}
  #shopify-section-{{ section.id }} {}

.contact-us-inn {}

.colrowvich {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.contact-us-content {
  display: flex;
  gap: 4rem;
}

.contact-form-area,
.contact-info-area {
  flex: 1;
}

.contact-info-area {
  /* justify-content: space-between; */
  gap: 25px;
  display: flex;
  flex-direction: column;
}

.contact-title {
  margin-top: 0;
  text-align: center;
  margin-bottom: 2rem;
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-row {
  display: flex;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  flex: 1;
}

.form-group.full-width {
  width: 100%;
}

.form-group label {
  font-size: 14px;
  color: #151515;
  font-weight: 400;
}

.form-input {
  padding: 0.75rem 1rem;
  background-color: #E8ECEF;
  border: 1px solid transparent;
  border-radius: 15px;
  font-size: 16px;
  height: 48px;
}

.form-input.full-width {
  width: 100%;
}

.form-input.full-width::placeholder,
.form-input::placeholder {
  color: #667085;
}

.form-input[type="select"],
select.form-input {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  background: #E8ECEF url('data:image/svg+xml;charset=UTF-8, %3csvg xmlns="http://www.w3.org / 2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"%3e%3cpolyline points="6 9 12 15 18 9"%3e%3c/polyline%3e%3c/svg%3e') no-repeat right 1rem center;
  background-size: 1em;
}

textarea.form-input {
  height: 120px;
  resize: none;
}

.checkbox-row {
  align-items: center;
  gap: 0.5rem;
  font-size: 14px;
  color: #333;
}

.checkbox-row input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: #003087;
}

.form-submit {
  cursor: pointer;
  font-size: 16px;
  font-weight: 600;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.form-submit:hover .arrow-icon {
  fill: #002642;
  /* Changes the SVG fill color on hover */
}

.arrow-icon {
  width: 20px;
  height: 20px;
  display: inline-flex;
}

.map-container {
  height: 500px;
  border-radius: 8px;
  overflow: hidden;
}

.contact-details {
  display: flex;
  flex-direction: column;
  align-content: baseline;
  gap: 1rem;
}

.contact-detail-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  gap: 0.25rem;
}

.contact-detail-item p {
  font-size: 20px;
}

.contact-details-title {
  font-size: 16px;
  font-weight: 400;
  color: #00264266;
  margin: 0;
  font-family: 'Open Sans'
  , sans-serif;
}

.contact-phone,
.contact-email,
.contact-hours {
  color: #002642;
  margin: 0;
}

.social-links {
  display: flex;
  gap: 10px;
}

.social-links-container {
  display: flex;
  gap: 0.5rem;
}

.social-icon img {
  width: 24px;
  height: 24px;
}

.social-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  color: #002642;
  transition: background-color 0.3s ease
  , color 0.3s ease;
}

.social-icon:hover {
  background-color: #002642;
  color: #FFFFFF;
}

.social-icon:hover svg path {
  fill: #fff;
}

.social-icon svg {
  pointer-events: none;
}

@media (max-width: 768px) {
  #shopify-section-{{ section.id }} .form-row {
    flex-direction: column;
  }

  #shopify-section-{{ section.id }}
  .checkbox-row {
    flex-direction: row;
  }


  #shopify-section-{{ section.id }}
  iFrame {
    margin-bottom: 15px;
  }
  #shopify-section-{{ section.id }} {
    padding: 40px 0;
  }

  .contact-us-content {
    flex-direction: column;
  }

  .form-input {
    padding: 0.75rem 1rem;
  }

  .colrowvich {
    flex-direction: column;
    gap: 25px;
  }
}
