<div class="contact-us-main page-width" id="{{ section_id }}">
  <div class="contact-us-inn pageWidth">
    <div class="contact-us-content">
      <div class="contact-form-area">
        <h2 class="contact-title">{{ section.settings.contact_title | escape }}</h2>
        {%- form 'contact'
          , class: 'contact-form' -%}

          <div class="form-messages">
            {%- if form.posted_successfully? -%}
              <p class="form-success-message" style="padding: 5px; background: #DCFFDB; color: green; border-radius: 15px;">
                Thank you for contacting us! We've received your message and will get back to you shortly.
              </p>
            {%- endif -%}

            {%- if form.errors -%}
              <div class="form-error-message">
                <p>Oops, there was a problem with your submission. Please correct the errors below.</p>
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}
          </div>

          <input
            type="hidden"
            name="form_type"
            value="contact">
          <input
            type="hidden"
            name="utf8"
            value="âœ“">

          <div class="form-row">
            <div class="form-group">
              <label for="first-name">First name</label>
              <input
                type="text"
                placeholder="John"
                id="first-name"
                name="contact[first_name]"
                class="form-input"
                required
                value="{{ form.first_name }}">
            </div>
            <div class="form-group">
              <label for="last-name">Last name</label>
              <input
                type="text"
                placeholder="Wick"
                id="last-name"
                name="contact[last_name]"
                class="form-input"
                required
                value="{{ form.last_name }}">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group full-width">
              <label for="email">Email</label>
              <input
                type="email"
                placeholder="you@company.com"
                id="email"
                name="contact[email]"
                class="form-input full-width{% if form.errors contains 'email' %} input-error{% endif %}"
                required
                value="{{ form.email }}">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group full-width">
              <label for="phone">Phone number</label>
              <input
                type="tel"
                placeholder="+1 (416) 700-4346"
                id="phone"
                name="contact[phone]"
                class="form-input full-width"
                required
                value="{{ form.phone }}">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group full-width">
              <label for="subject">Subject (choose from drop-down) *</label>
              <select
                id="subject"
                name="contact[subject]"
                class="form-input full-width"
                required>
                <option value="">Select an option</option>
                <option
                  value="general"
                  {% if form.subject == 'general' %}
                  selected="selected"
                  {% endif %}>General customer support</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group full-width">
              <label for="message">Message</label>
              <textarea
                id="message"
                name="contact[message]"
                class="form-input full-width"
                rows="4"
                required>{{ form.body }}</textarea>
            </div>
          </div>
          <div class="form-row checkbox-row">
            <input
              type="checkbox"
              id="privacy-policy"
              required>
            <label for="privacy-policy">I agree to friendly privacy policy</label>
          </div>
          <button type="submit" class="form-submit blueButton customButton">
            Send Message
