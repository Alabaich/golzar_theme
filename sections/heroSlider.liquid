<style>
  .hero-slider {
    position: relative;
  }

  .hero-slider .splide__slide {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    border-radius: 12px;
  }

  .hero-slider .splide__slide img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hero-slider .splide__slide .slide-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-indent: -9999px;
  }

  .slide-content {
    position: absolute;
    top: 15%;
    left: 5%;
    color: #fff;
    z-index: 2;
    max-width: 60%;
    display: flex;
    gap: 25px;
    flex-direction: column;
  }

  .slide-content h2 {
    margin: 0;
    line-height: 1.2;
    color: #fff;
    text-align: left;
  }

  .slide-content .btnHeroSlider {
    width: fit-content;
    text-align: center;
    align-items: center;
    display: flex;
    gap: 5px;
  }

  .splide__pagination__page.is-active {
    background: #667D8E !important;
  }
</style>


<div class="hero-slider splide page-width pageWidth">
  <div class="splide__track">
    <ul class="splide__list">
      {% for block in section.blocks %}
        {% assign image = block.settings.image %}
        {% assign heading = block.settings.heading %}
        {% assign button_label = block.settings.button_label %}
        {% assign button_url = block.settings.button_url %}
        {% if image != blank and button_url != blank %}
          <li class="splide__slide" title="{{ heading }}">
            <a href="{{ button_url }}" class="hero-slider-link">
              <img
                src="{{ image | img_url: '1600x' }}"
                alt="{{ heading }}"
                title="{{ heading }}">
              <div class="slide-content">
                <h2>{{ heading }}</h2>
                {% if button_label != blank %}
                  <div class="transparentButton customButton btnHeroSlider">
                    {{ button_label }}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 20 20"
                      fill="none">
                      <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M7.74408 5.24408C8.06951 4.91864 8.59715 4.91864 8.92259 5.24408L13.0893 9.41074C13.4147 9.73618 13.4147 10.2638 13.0893 10.5893L8.92259 14.7559C8.59715 15.0814 8.06951 15.0814 7.74408 14.7559C7.41864 14.4305 7.41864 13.9028 7.74408 13.5774L11.3215 10L7.74408 6.42259C7.41864 6.09715 7.41864 5.56951 7.74408 5.24408Z"
                        fill="white" />
                    </svg>
                  </div>
                {% endif %}
              </div>
            </a>
          </li>
        {% else %}
          <li class="splide__slide" title="{{ heading }}">
            <img
              src="{{ image | img_url: '1600x' }}"
              alt="{{ heading }}"
              title="{{ heading }}">
            <div class="slide-content">
              <h2>{{ heading }}</h2>
              {% if button_label != blank %}
                <div class="transparentButton customButton btnHeroSlider">
                  {{ button_label }}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 20 20"
                    fill="none">
                    <path
                      fill-rule="evenodd"
                      clip-rule="evenodd"
                      d="M7.74408 5.24408C8.06951 4.91864 8.59715 4.91864 8.92259 5.24408L13.0893 9.41074C13.4147 9.73618 13.4147 10.2638 13.0893 10.5893L8.92259 14.7559C8.59715 15.0814 8.06951 15.0814 7.74408 14.7559C7.41864 14.4305 7.41864 13.9028 7.74408 13.5774L11.3215 10L7.74408 6.42259C7.41864 6.09715 7.41864 5.56951 7.74408 5.24408Z"
                      fill="white" />
                  </svg>
                </div>
              {% endif %}
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('.splide', {
      type: 'loop',
      padding: '10%',
      gap: '25px',
    }).mount();
  });
</script>

{% schema %}
  {
    "name": "Hero Slider",
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Slide Heading",
            "default": "Your Heading Here"
          }, {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Slider",
        "category": "Slideshow",
        "blocks": [
          {
            "type": "slide"
          }, {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}