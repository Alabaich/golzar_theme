<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<style>
  .hs-hero-slider {
    position: relative;
  }

  .hs-hero-slider .splide__slide {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    border-radius: 12px;
  }

  .hs-hero-slider .splide__slide img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hs-hero-slider .splide__slide .hs-slide-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-indent: -9999px;
  }

  .hs-slide-content {
    position: absolute;
    top: 15%;
    left: 5%;
    color: #fff;
    z-index: 2;
    max-width: 60%;
    display: flex;
    gap: 25px;
    flex-direction: column;
  }

  .hs-slide-content h2 {
    margin: 0;
    line-height: 1.2;
    color: #fff;
    text-align: left;
  }

  .hs-slide-content .hs-btn-hero-slider {
    width: fit-content;
    text-align: center;
    align-items: center;
    display: flex;
    gap: 5px;
  }

  .hs-hero-slider .splide__arrow {
    height: 3em;
    width: 3em;
  }

  .hs-hero-slider .splide__arrow--next {
    right: 8rem;
  }

  .hs-hero-slider .splide__arrow--prev {
    left: 8rem;
  }

  .splide__pagination__page.is-active {
    background: #667D8E !important;
  }

  @media (max-width: 1600px) {
    .hs-hero-slider .splide__arrow--next {
      right: 5rem;
    }

    .hs-hero-slider .splide__arrow--prev {
      left: 5rem;
    }
  }

  @media (max-width: 990px) {
    .hs-hero-slider .splide__arrow--next {
      right: 2em;
    }

    .hs-hero-slider .splide__arrow--prev {
      left: 2em;
    }
  }

  @media (max-width: 768px) {
    .hs-hero-slider .splide__slide {
      height: auto;
      aspect-ratio: 16 / 9;
    }
  }
</style>

<div class="hs-hero-slider splide page-width pageWidth">
  <div class="splide__track">
    <ul class="splide__list">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          {% assign image = block.settings.image %}
          {% assign heading = block.settings.heading %}
          {% assign button_label = block.settings.button_label %}
          {% assign button_url = block.settings.button_url %}
          {% if image != blank and button_url != blank %}
            <li class="splide__slide" title="{{ heading }}">
              <a href="{{ button_url }}" class="hs-slide-link">
                <img
                  src="{{ image | img_url: '1600x' }}"
                  alt="{{ heading }}"
                  title="{{ heading }}">
                <div class="hs-slide-content">
                  {% comment %} <h2>{{ heading }}</h2> {% endcomment %}
                </div>
              </a>
            </li>
          {% else %}
            <li class="splide__slide" title="{{ heading }}">
              <img
                src="{{ image | img_url: '1600x' }}"
                alt="{{ heading }}"
                title="{{ heading }}">
              <div class="hs-slide-content">
                {% comment %} <h2>{{ heading }}</h2> {% endcomment %}
              </div>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('.splide', {
      type: 'loop',
      gap: '25px',
      autoplay: true,
      interval: 4000,
      pauseOnHover: false,
      pauseOnFocus: true,
      heightRatio : 0.5625,
    }).mount();
  });
</script>

{% schema %}
  {
    "name": "Hero Slider",
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Slide Heading",
            "default": "Your Heading Here"
          }, {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Slider",
        "category": "Slideshow",
        "blocks": [
          {
            "type": "slide"
          }, {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}