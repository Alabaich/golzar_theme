<style>
  .hs-hero-slider {
    position: relative;
  }

  .hs-hero-slider .splide__slide {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    border-radius: 12px;
  }

  .hs-hero-slider .splide__slide img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hs-hero-slider .splide__slide .hs-slide-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-indent: -9999px;
  }

  .hs-slide-content {
    position: absolute;
    top: 15%;
    left: 5%;
    color: #fff;
    z-index: 2;
    max-width: 60%;
    display: flex;
    gap: 25px;
    flex-direction: column;
  }

  .hs-slide-content h2 {
    margin: 0;
    line-height: 1.2;
    color: #fff;
    text-align: left;
  }

  .hs-slide-content .hs-btn-hero-slider {
    width: fit-content;
    text-align: center;
    align-items: center;
    display: flex;
    gap: 5px;
  }

  .hs-hero-slider .splide__arrow {
    height: 3em;
    width: 3em;
  }

  .hs-hero-slider .splide__arrow--next {
    right: -2em;
  }

  .hs-hero-slider .splide__arrow--prev {
    left: -2em;
  }

  .hs-three-blocks-section {
    display: flex;
    gap: 20px;
    margin-top: 40px;
    flex-wrap: wrap;
  }

  .hs-three-blocks-section .hs-block-item {
    flex: 1;
    min-width: 300px;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    height: 250px;
  }

  .hs-block-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hs-three-blocks-section .hs-block-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 25px;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 15px;
  }

  .hs-block-content-top {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .hs-block-content-bottom {
    margin-top: auto;
  }

  .hs-three-blocks-section .hs-block-content h3 {
    margin: 0;
    color: #fff;
  }

  .hs-three-blocks-section .hs-block-content p {
    margin: 0;
    font-size: 16px;
  }

  .hs-three-blocks-section .hs-block-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.1) 100%);
    z-index: 1;
    pointer-events: none;
    border-radius: 12px;
  }

  .hs-three-blocks-section .hs-block-content {
    z-index: 2;
  }

  .hs-block-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: transparent;
    color: #fff;
    text-decoration: none;
    border-radius: 150px;
    font-weight: 600;
    width: fit-content;
    transition: all 0.3s ease;
    border: 2px solid #fff;
  }

  .hs-block-btn:hover {
    background-color: #fff;
    color: #2c2d2c;
    transform: translateY(-2px);
  }

  .hs-block-btn:hover svg path {
    fill: #2c2d2c;
  }

  .splide__pagination__page.is-active {
    background: #667D8E !important;
  }

  @media (max-width: 1600px) {
    .hs-hero-slider .splide__arrow--next {
      right: 0;
    }

    .hs-hero-slider .splide__arrow--prev {
      left: 0;
    }
  }

  @media (max-width: 990px) {
    .hs-hero-slider .splide__arrow--next {
      right: 1em;
    }

    .hs-hero-slider .splide__arrow--prev {
      left: 1em;
    }
  }

  @media (max-width: 768px) {
    .hs-hero-slider .splide__slide {
      height: auto;
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 768px) {
    .hs-three-blocks-section {
      flex-direction: column;
    }

    .hs-block-item {
      height: 300px;
    }
  }
</style>

<div class="hs-hero-slider splide page-width pageWidth">
  <div class="splide__track">
    <ul class="splide__list">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          {% assign image = block.settings.image %}
          {% assign heading = block.settings.heading %}
          {% assign button_label = block.settings.button_label %}
          {% assign button_url = block.settings.button_url %}
          {% if image != blank and button_url != blank %}
            <li class="splide__slide" title="{{ heading }}">
              <a href="{{ button_url }}" class="hs-slide-link">
                <img
                  src="{{ image | img_url: '1600x' }}"
                  alt="{{ heading }}"
                  title="{{ heading }}">
                <div class="hs-slide-content">
                  {% comment %} <h2>{{ heading }}</h2> {% endcomment %}
                </div>
              </a>
            </li>
          {% else %}
            <li class="splide__slide" title="{{ heading }}">
              <img
                src="{{ image | img_url: '1600x' }}"
                alt="{{ heading }}"
                title="{{ heading }}">
              <div class="hs-slide-content">
                {% comment %} <h2>{{ heading }}</h2> {% endcomment %}
              </div>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<div class="page-width pageWidth">
  <div class="hs-three-blocks-section">
    {% for block in section.blocks %}
      {% if block.type == 'promo_block' %}
        <div class="hs-block-item">
          <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.heading }}">
          <div class="hs-block-content">
            <div class="hs-block-content-top">
              <h3>{{ block.settings.heading }}</h3>
              <p>{{ block.settings.text }}</p>
            </div>
            <div class="hs-block-content-bottom">
              <a href="{{ block.settings.button_url }}" class="hs-block-btn">
                {{ block.settings.button_label }}
                <svg
                  width="5"
                  height="8"
                  viewBox="0 0 5 8"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M0.195262 0.195262C0.455612 -0.0650874 0.877722 -0.0650874 1.13807 0.195262L4.4714 3.5286C4.73175 3.78894 4.73175 4.21106 4.4714 4.4714L1.13807 7.80474C0.877722 8.06509 0.455612 8.06509 0.195262 7.80474C-0.0650874 7.54439 -0.0650874 7.12228 0.195262 6.86193L3.05719 4L0.195262 1.13807C-0.0650871 0.877722 -0.0650871 0.455612 0.195262 0.195262Z"
                    fill="white" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('.splide', {
      type: 'loop',
      padding: '10%',
      gap: '25px',
    }).mount();
  });
</script>

