<style>
  .hero-slider {
    position: relative;
  }
  .hero-slider .splide__slide {
    position: relative;
  }
  .hero-slider .splide__slide .slide-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-indent: -9999px;
    /* Hides text for SEO */
  }
  .slide-content {
    position: absolute;
    bottom: 20%;
    left: 10%;
    color: #fff;
    z-index: 2;
    /* Above the link */
  }
  .slide-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .slide-content .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    z-index: 2;
    position: relative;
  }
</style>

<div class="hero-slider splide">
  <div class="splide__track">
    <ul class="splide__list">
      {% for i in (1..5) %}
        {% assign image = section.settings['slide_' | append: i | append: '_image'] %}
        {% assign heading = section.settings['slide_' | append: i | append: '_heading'] %}
        {% assign button_label = section.settings['slide_' | append: i | append: '_button_label'] %}
        {% assign button_url = section.settings['slide_' | append: i | append: '_button_url'] %}
        {% if image != blank %}
          <li class="splide__slide" title="{{ heading }}">
            {% if button_url != blank %}
              <a
                href="{{ button_url }}"
                class="slide-link"
                title="{{ heading }}">Slide Link</a>
            {% endif %}
            <img
              src="{{ image | img_url: '1600x' }}"
              alt="{{ heading }}"
              title="{{ heading }}">
            <div class="slide-content">
              <h2>{{ heading }}</h2>
              {% if button_label != blank %}
                <a
                  href="{{ button_url }}"
                  class="btn"
                  title="{{ heading }}">{{ button_label }}</a>
              {% endif %}
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
  new Splide('.splide', {
    type: 'loop',
    padding: '20%',
  }).mount();
  });
</script>

{% schema %}
  {
    "name": "Hero Slider",
    "settings": [
      {% for i in (1..5) %}
        {
          "type": "image_picker",
          "id": "slide_{{ i }} _image",
          "label": "Slide {{ i }} Image"
        }, {
          "type": "text",
          "id": "slide_{{ i }} _heading",
          "label": "Slide {{ i }} Heading",
          "default": "Your Heading Here"
        }, {
          "type": "text",
          "id": "slide_{{ i }} _button_label",
          "label": "Slide {{ i }} Button Label",
          "default": "Shop Now"
        }, {
          "type": "url",
          "id": "slide_{{ i }} _button_url",
          "label": "Slide {{ i }} Button URL"
        }{% if i < 5 %},{% endif %}
      {% endfor %}
    ],
    "presets": [
      {
        "name": "Hero Slider",
        "category": "Slideshow"
      }
    ]
  }
{% endschema %}