<style>
  .hero-slider {
    position: relative;
  }

  .hero-slider .splide__slide {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    border-radius: 12px;
  }

  .hero-slider .splide__slide img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hero-slider .splide__slide .slide-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-indent: -9999px;
  }

  .slide-content {
    position: absolute;
    top: 15%;
    left: 5%;
    color: #fff;
    z-index: 2;
    max-width: 60%;
    display: flex;
    gap: 25px;
    flex-direction: column;
  }

  .slide-content h2 {
    margin: 0;
    line-height: 1.2;
    color: #fff;
    text-align: left;
  }

  .slide-content .btnHeroSlider {
    width: fit-content;
    text-align: center;
    align-items: center;
    display: flex;
    gap: 5px;
  }

  .hero-slider .splide__arrow {
    height: 3em;
    width: 3em;
  }

  .hero-slider .splide__arrow--next {
    right: -2em;
  }

  .hero-slider .splide__arrow--prev {
    left: -2em;
  }

  .splide__pagination__page.is-active {
    background: #667D8E !important;
  }

  .three-blocks-section {
    display: flex;
    gap: 20px;
    margin-top: 40px;
    flex-wrap: wrap;
  }

  .block-item {
    flex: 1;
    min-width: 300px;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    height: 400px;
  }

  .block-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .block-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 25px;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: #fff;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .block-content h3 {
    margin: 0;
    font-size: 24px;
    line-height: 1.2;
  }

  .block-content p {
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
  }

  .block-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: #fff;
    color: #333;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    width: fit-content;
    transition: all 0.3s ease;
  }

  .block-btn:hover {
    background-color: #f5f5f5;
    transform: translateY(-2px);
  }

  @media (max-width: 1600px) {
    .hero-slider .splide__arrow--next {
      right: 0;
    }

    .hero-slider .splide__arrow--prev {
      left: 0;
    }
  }

  @media (max-width: 990px) {
    .hero-slider .splide__arrow--next {
      right: 1em;
    }

    .hero-slider .splide__arrow--prev {
      left: 1em;
    }
  }

  @media (max-width: 768px) {
    .hero-slider .splide__slide {
      height: auto;
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 768px) {
    .three-blocks-section {
      flex-direction: column;
    }

    .block-item {
      height: 300px;
    }
  }
</style>

<div class="hero-slider splide page-width pageWidth">
  <div class="splide__track">
    <ul class="splide__list">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          {% assign image = block.settings.image %}
          {% assign heading = block.settings.heading %}
          {% assign button_label = block.settings.button_label %}
          {% assign button_url = block.settings.button_url %}
          {% if image != blank and button_url != blank %}
            <li class="splide__slide" title="{{ heading }}">
              <a href="{{ button_url }}" class="hero-slider-link">
                <img
                  src="{{ image | img_url: '1600x' }}"
                  alt="{{ heading }}"
                  title="{{ heading }}">
                <div class="slide-content">
                  {% comment %} <h2>{{ heading }}</h2> {% endcomment %}
                </div>
              </a>
            </li>
          {% else %}
            <li class="splide__slide" title="{{ heading }}">
              <img
                src="{{ image | img_url: '1600x' }}"
                alt="{{ heading }}"
                title="{{ heading }}">
              <div class="slide-content">
                {% comment %} <h2>{{ heading }}</h2> {% endcomment %}
              </div>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<div class="page-width pageWidth">
  <div class="three-blocks-section">
    {% for block in section.blocks %}
      {% if block.type == 'promo_block' %}
        <div class="block-item">
          <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.heading }}">
          <div class="block-content">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.text }}</p>
            <a href="{{ block.settings.button_url }}" class="block-btn">
              {{ block.settings.button_label }}
              <svg
                width="16"
                height="16"
                viewBox="0 0 16 16"
                fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path d="M8 0L6.59 1.41L12.17 7H0V9H12.17L6.59 14.59L8 16L16 8L8 0Z" fill="currentColor" />
              </svg>
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('.splide', {
      type: 'loop',
      padding: '10%',
      gap: '25px',
    }).mount();
  });
</script>

