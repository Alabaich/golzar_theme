{%- liquid
  assign settings = section.settings
  assign blocks = section.blocks
  assign num_blocks = blocks.size
-%}

{%- style -%}
  .timeline-section-{{ section.id }} {
    --section-bg: {{ settings.section_bg_color | default: '#FFFFFF' }};
    --heading-supertitle-color: {{ settings.heading_supertitle_color | default: '#111827' }};
    --heading-title-color: {{ settings.heading_title_color | default: '#111827' }};
    --accent-color: {{ settings.accent_color | default: '#3B5F82' }};
    --year-text-color: {{ settings.year_text_color | default: '#FFFFFF' }};
    --card-text-color: {{ settings.card_text_color | default: '#374151' }};
    --line-color: {{ settings.line_color | default: '#E5E7EB' }};

    --year-display-size: {{ settings.year_bubble_size }}px;
    --year-display-font-size: {{ settings.year_font_size }}px;
    --year-to-text-margin: 15px;
    --line-thickness: 2px;

    background-color: var(--section-bg);
    padding-top: {{ settings.padding_top }}px;
    padding-bottom: {{ settings.padding_bottom }}px;
    font-family: 'Raleway'
    , sans-serif;
  }

  .timeline-section-{{ section.id }}
  .page-width {
    margin: 0 auto;
    padding: 0 20px;
  }

  .timeline-section-{{ section.id }}
  .timeline-header {
    text-align: {{ settings.header_align | default: 'left' }};
    margin-bottom: 50px;
  }

  .timeline-section-{{ section.id }}
  .timeline-header__supertitle {
    font-size: {{ settings.supertitle_font_size }}px;
    font-weight: {{ settings.supertitle_font_weight }};
    color: var(--heading-supertitle-color);
    margin-bottom: 8px;
  }

  .timeline-section-{{ section.id }}
  .timeline-header__title {
    font-size: 36px;
    font-weight: 600;
    color: var(--heading-title-color);
    margin: 0;
  }

  .timeline-section-{{ section.id }}
  .timeline__container {
    position: relative;
    padding-top: calc(var(--year-display-size) / 2);
  }

  .timeline-section-{{ section.id }}
  .timeline__line {
    position: absolute;
    top: calc(var(--year-display-size) / 2);
    left: 0;
    right: 0;
    height: var(--line-thickness);
    background-color: var(--line-color);
    z-index: 1;
  }

  .timeline-section-{{ section.id }}
  .timeline__events {
    display: flex;
    justify-content: space-between;
    position: relative;
    z-index: 2;
  }

  .timeline-section-{{ section.id }}
  .timeline__event-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    padding: 0 15px;
  }

  .timeline-section-{{ section.id }}
  .timeline__year-display {
    width: var(--year-display-size);
    height: var(--year-display-size);
    border-radius: 50%;
    background-color: var(--accent-color);
    color: var(--year-text-color);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--year-display-font-size);
    font-weight: 600;
    margin-bottom: var(--year-to-text-margin);
    position: relative;
    z-index: 3;
  }

  .timeline-section-{{ section.id }}
  .timeline__event-text {
    color: var(--card-text-color);
    font-size: 14px;
    line-height: 1.5;
    text-align: center;
    padding-top: 10px;
  }

  @media (max-width: 749px) {
    .timeline-section-{{ section.id }} .timeline__events {
      flex-direction: column;
    }

    .timeline-section-{{ section.id }}
    .timeline__event-item {
      flex-direction: row;
      align-items: flex-start;
      margin-bottom: 30px;
      padding: 0;
    }

    .timeline-section-{{ section.id }}
    .timeline__year-display {
      margin-right: 20px;
      margin-bottom: 0;
    }

    .timeline-section-{{ section.id }}
    .timeline__line {
      display: none;
    }
  }
{%- endstyle -%}

<div class="timeline-section-{{ section.id }}">
  <div class="page-width">
    <div class="timeline-header">
      {%- if settings.supertitle != blank -%}
        <div class="timeline-header__supertitle">{{ settings.supertitle }}</div>
      {%- endif -%}
      {%- if settings.title != blank -%}
        <h2 class="timeline-header__title">{{ settings.title }}</h2>
      {%- endif -%}
    </div>

    <div class="timeline__container">
      <div class="timeline__line"></div>
      <div class="timeline__events">
        {%- for block in blocks -%}
          <div class="timeline__event-item">
            {%- if block.settings.year != blank -%}
              <div class="timeline__year-display">{{ block.settings.year }}</div>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <div class="timeline__event-text">{{ block.settings.description }}</div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Timeline Simple",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "supertitle",
        "label": "Superheading",
        "default": "Built on Experience:"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Main Heading",
        "default": "The Evolution of Golzar Home"
      },
      {
        "type": "range",
        "id": "supertitle_font_size",
        "min": 12,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Superheading Font Size",
        "default": 18
      },
      {
        "type": "select",
        "id": "supertitle_font_weight",
        "label": "Superheading Font Weight",
        "options": [
          {
            "value": "400",
            "label": "Regular"
          }, {
            "value": "500",
            "label": "Medium"
          }, {
            "value": "600",
            "label": "Semi-Bold"
          }, {
            "value": "700",
            "label": "Bold"
          }
        ],
        "default": "600"
      }, {
        "type": "range",
        "id": "year_bubble_size",
        "min": 40,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Year Bubble Size",
        "default": 60
      }, {
        "type": "range",
        "id": "year_font_size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Year Font Size",
        "default": 16
      }, {
        "type": "color",
        "id": "accent_color",
        "label": "Year Bubble Color",
        "default": "#3B5F82"
      }, {
        "type": "color",
        "id": "year_text_color",
        "label": "Year Text Color",
        "default": "#FFFFFF"
      }, {
        "type": "color",
        "id": "line_color",
        "label": "Timeline Color",
        "default": "#E5E7EB"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top Padding",
        "default": 60
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 60
      }
    ],
    "blocks": [
      {
        "type": "timeline_event",
        "name": "Timeline Event",
        "settings": [
          {
            "type": "text",
            "id": "year",
            "label": "Year",
            "default": "2022"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Event description</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Timeline Simple",
        "blocks": [
          {
            "type": "timeline_event",
            "settings": {
              "year": "1996",
              "description": "<p>Establishment of Golzar Home. Reputable Retailer of Galvanized Fitting.</p>"
            }
          },
          {
