{%- liquid
  assign image = section.settings.image
  assign help_text = section.settings.help_text
  assign title = section.settings.title
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link

  assign image_alt = section.settings.image_alt_text
  if image_alt == blank and image != blank
    assign image_alt = image.alt | escape
  elsif image_alt == blank
    assign image_alt = "Promotional image"
  endif

  assign title_default = "Request a free consultation and price estimate!" | t
  assign help_text_default = "Need help?" | t
  assign button_text_default = "CONTACT US" | t
-%}

<style>
  .consultation-banner-{{ section.id }} {
    background-color: #ffffff;
    width: 100%;
    max-width: var(--page-width);
    margin: 20px auto;
    padding: 0 1.5rem;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__content {
    display: flex;
    align-items: stretch;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__text-column {
    flex: 1 1 {{ section.settings.text_column_width }}%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #333333;
    text-align: {{ section.settings.text_align_desktop }};
  }

  .consultation-banner-{{ section.id }} .consultation-banner__help-text {
    font-size: 16px;
    color: #555555;
    margin: 0 0 10px;
    font-family: 'Arial', sans-serif;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__title {
    font-size: {{ section.settings.title_size }}px;
    font-family: 'Georgia', serif;
    color: #000000;
    margin: 0 0 25px;
    font-weight: normal;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 10px 28px;
    text-decoration: none;
    border-radius: 50px;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    display: inline-block;
    border: 2px solid {{ section.settings.button_bg_color }};
    cursor: pointer;
    line-height: normal;
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__text-column[style*="text-align: left"] .consultation-banner__button {
    align-self: flex-start;
  }
  .consultation-banner-{{ section.id }} .consultation-banner__text-column[style*="text-align: center"] .consultation-banner__button {
    align-self: center;
  }
  .consultation-banner-{{ section.id }} .consultation-banner__text-column[style*="text-align: right"] .consultation-banner__button {
    align-self: flex-end;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__button:hover,
  .consultation-banner-{{ section.id }} .consultation-banner__button:focus {
    background-color: #ffffff;
    color: {{ section.settings.button_bg_color }};
    border-color: {{ section.settings.button_bg_color }};
    outline: none;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__arrow {
    margin-left: 8px;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__image-column {
    flex: 1 1 {{ 100 | minus: section.settings.text_column_width }}%;
    background-color: {{ section.settings.image_bg_color }};
    overflow: hidden;
    position: relative;
    min-height: 200px;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__image-column img {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    display: block;
  }

  .consultation-banner-{{ section.id }} .consultation-banner__placeholder-image svg {
    width: 80%;
    height: 80%;
    max-width: 150px;
    max-height: 150px;
    display: block;
    margin: auto;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  @media screen and (min-width: 750px) {
    .consultation-banner-{{ section.id }} {
      padding: 0 5rem;
    }
     .consultation-banner-{{ section.id }} .consultation-banner__text-column {
        padding: 30px 40px;
     }
  }

  @media (max-width: 768px) {
    .consultation-banner-{{ section.id }} .consultation-banner__content {
      flex-direction: column;
    }

    .consultation-banner-{{ section.id }} .consultation-banner__text-column {
      flex-basis: auto;
      padding: 30px;
      text-align: {{ section.settings.text_align_mobile }};
      order: {% if section.settings.image_position_mobile == 'top' %}2{% else %}1{% endif %};
    }

    .consultation-banner-{{ section.id }} .consultation-banner__image-column {
      flex-basis: auto;
      min-height: {{ section.settings.image_min_height_mobile }}px;
      order: {% if section.settings.image_position_mobile == 'top' %}1{% else %}2{% endif %};
    }
  }

  @media (max-width: 480px) {
    .consultation-banner-{{ section.id }} .consultation-banner__title {
      font-size: {{ section.settings.title_size | times: 0.8 | round }}px;
    }
    .consultation-banner-{{ section.id }} .consultation-banner__text-column {
      padding: 20px;
    }
  }
</style>

<section class="consultation-banner consultation-banner-{{ section.id }}" aria-label="{{ title | default: title_default }}">
  <div class="consultation-banner__content">
    <div class="consultation-banner__text-column" style="text-align: {{ section.settings.text_align_desktop }};">
      {%- if help_text != blank or section.settings.help_text != "" -%}
        <p class="consultation-banner__help-text">{{ help_text | default: help_text_default }}</p>
      {%- endif -%}

      {%- if title != blank or section.settings.title != "" -%}
        <h1 class="consultation-banner__title">{{ title | default: title_default }}</h1>
      {%- endif -%}

      {%- if button_text != blank or section.settings.button_text != "" -%}
        {%- if button_link != blank -%}
          <a href="{{ button_link }}" class="consultation-banner__button">
            {{ button_text | default: button_text_default }}
            {%- if section.settings.show_button_arrow -%}
              <span class="consultation-banner__arrow">&gt;</span>
            {%- endif -%}
          </a>
        {%- else -%}
          <span class="consultation-banner__button" style="cursor:default;">
            {{ button_text | default: button_text_default }}
            {%- if section.settings.show_button_arrow -%}
              <span class="consultation-banner__arrow">&gt;</span>
            {%- endif -%}
          </span>
        {%- endif -%}
      {%- endif -%}
    </div>
    <div class="consultation-banner__image-column">
      {%- if image != blank -%}
        <img
          src="{{ image | image_url: width: image.width }}"
          srcset="{%- if image.width >= 400 -%}{{ image | image_url: width: 400 }} 400w,{%- endif -%}
                  {%- if image.width >= 600 -%}{{ image | image_url: width: 600 }} 600w,{%- endif -%}
                  {%- if image.width >= 800 -%}{{ image | image_url: width: 800 }} 800w,{%- endif -%}
                  {%- if image.width >= 1000 -%}{{ image | image_url: width: 1000 }} 1000w,{%- endif -%}
                  {%- if image.width >= 1200 -%}{{ image | image_url: width: 1200 }} 1200w,{%- endif -%}
                  {{ image | image_url: width: image.width }} {{ image.width }}w"
          sizes="(max-width: 768px) 100vw, {{ 100 | minus: section.settings.text_column_width }}vw"
          alt="{{ image_alt }}"
          loading="lazy"
          width="{{ image.width }}"
          height="{{ image.height }}">
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'consultation-banner__placeholder-image' }}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Consultation Banner",
    "tag": "section",
    "class": "shopify-section-consultation-banner",
    "settings": [
      {
        "type": "header",
        "content": "Content Settings"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "image_alt_text",
        "label": "Image alt text",
        "info": "Defaults to image's alt text if available."
      },
      {
        "type": "text",
        "id": "help_text",
        "label": "Help Text (Optional)",
        "default": "Need help?"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Request a free consultation and price estimate!"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "CONTACT US"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "checkbox",
        "id": "show_button_arrow",
        "label": "Show arrow on button",
        "default": true
      }, {
        "type": "header",
        "content": "Layout Settings"
      }, {
        "type": "range",
        "id": "border_radius",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Border radius (section)",
        "default": 8
      }, {
        "type": "range",
        "id": "text_column_width",
        "min": 30,
        "max": 70,
        "step": 5,
        "unit": "%",
        "label": "Text column width",
        "default": 55
      }, {
        "type": "select",
        "id": "text_align_desktop",
        "label": "Text alignment (Desktop)",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      }, {
        "type": "select",
        "id": "text_align_mobile",
        "label": "Text alignment (Mobile)",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }, {
        "type": "header",
        "content": "Image Settings"
      }, {
        "type": "color",
        "id": "image_bg_color",
        "label": "Image column background",
        "default": "#f0f0f0"
      }, {
        "type": "select",
        "id": "image_fit",
        "label": "Image fit",
        "options": [
          {
            "value": "cover",
            "label": "Cover (fill & crop)"
          }, {
            "value": "contain",
            "label": "Contain (fit without crop)"
          }
        ],
        "default": "cover"
      }, {
        "type": "header",
        "content": "Mobile Layout"
      }, {
        "type": "select",
        "id": "image_position_mobile",
        "label": "Image position on mobile",
        "options": [
          {
            "value": "top",
            "label": "Image on Top"
          }, {
            "value": "bottom",
            "label": "Image on Bottom (Text on Top)"
          }
        ],
        "default": "top"
      }, {
        "type": "range",
        "id": "image_min_height_mobile",
        "min": 150,
        "max": 500,
        "step": 10,
        "unit": "px",
        "label": "Image min height (Mobile)",
        "default": 250
      }, {
        "type": "header",
        "content": "Styling"
      }, {
        "type": "range",
        "id": "title_size",
        "min": 18,
        "max": 60,
        "step": 1,
        "unit": "px",
        "label": "Title font size",
        "default": 32
      }, {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button background color",
        "default": "#0a2b4c"
      }, {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "button_bg_color_hover",
        "label": "Button background color (Hover)",
        "info": "This setting is not used with the current button hover style (white background on hover).",
        "default": "#071f38"
      }
    ],
    "presets": [
      {
        "name": "Consultation Banner",
        "category": "Image with text"
      }
    ]
  }
{% endschema %}