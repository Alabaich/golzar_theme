    font-size: 18px;
    line-height: 110.00000000000001%;
    vertical-align: middle;
    color: #151515;
  }

  .section-{{ section.id }}
  .facets__item--selected .facets__label {
    background-color: #151515;
    color: #fff;
    border-color: #151515;
  }

  .section-{{ section.id }}.facets__item--selected .facets__label:hover {
    background-color: #151515;
    color: #fff;
  }

  .section-{{ section.id }}
  .facets__item--selected .icon-checkmark {
    color: #fff;
  }

  .section-{{ section.id }}
  .facets__summary-label {
    font-family: Raleway;
    font-weight: 600;
    font-size: 18px;
    line-height: 110.00000000000001%;
    vertical-align: middle;
    color: #151515;
  }

  .section-{{ section.id }}
  .facets__label {
    font-family: Raleway;
    font-size: 16px;
    padding: 8px 12px;
    border: 1px solid #ddd;
