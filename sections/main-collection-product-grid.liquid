    transition: all 0.2s ease;
  }

  .section-{{ section.id }}.facets__label:hover {
    background-color: #f5f5f5;
  }

  .section-{{ section.id }}
  .product-count-new {
    font-family: Raleway;
    font-size: 16px;
    margin-bottom: 20px;
    color: #151515;
  }
