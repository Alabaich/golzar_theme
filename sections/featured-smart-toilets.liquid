<style>
  .featured-collection-container {
    background-color: #ffffff;
  }

  .featured-collection__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .featured-collection__heading {
    margin: 0;
  }

  .featured-collection__subheading {
    margin: 0;
    color: #555555;
    line-height: 1.6;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .featured-collection__product-card {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    overflow: hidden;
    text-align: center;
    transition: box-shadow 0.3s ease
    , transform 0.3s ease;
  }

  .featured-collection__product-card:hover {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }

  .featured-collection__image-wrapper {
    display: block;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
  }

  .featured-collection__image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-collection__product-info {
    padding: 20px;
  }

  .featured-collection__product-title {
    font-size: 18px;
    font-weight: 500;
    margin: 0 0 10px;
    color: #111;
    text-decoration: none;
  }

  .featured-collection__product-title:hover {
    text-decoration: underline;
  }

  .featured-collection__product-price {
    font-size: 16px;
    color: #333;
    margin-bottom: 15px;
  }

  .featured-collection__product-button {
    display: inline-block;
    text-decoration: none;
  }

  .featured-collection__cta-wrapper {
    text-align: center;
    margin-top: 40px;
  }

  .featured-collection__main-button {
    display: inline-block;
    padding: 12px 30px;
    font-size: 16px;
    text-decoration: none;
    color: #ffffff;
    background-color: #1f2937;
    border: 1px solid #1f2937;
    border-radius: 5px;
    transition: background-color 0.3s ease
    , color 0.3s ease;
  }

  .featured-collection__main-button:hover {
    background-color: #374151;
    border-color: #374151;
  }
</style>

<div class="featured-collection-container page-width pageWidth">
  <div class="featured-collection__header">
    {% if section.settings.heading != blank %}
      <h2 class="featured-collection__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <div class="featured-collection__subheading"><p class="bodyText">{{ section.settings.subheading }}</p></div>
    {% endif %}
  </div>

  <div class="featured-collection__grid">
    {% for block in section.blocks %}
      {%- assign product = block.settings.product -%}
      {% if product != blank %}
        <div class="featured-collection__product-card">
          <a href="{{ product.url }}" class="featured-collection__image-wrapper">
            {% if product.featured_image != blank %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                width="600"
                height="600"
                loading="lazy">
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </a>
          <div class="featured-collection__product-info">
            <a href="{{ product.url }}" class="featured-collection__product-title">{{ product.title }}</a>
            <p class="featured-collection__product-price">{{ product.price | money }}</p>
            <a href="{{ product.url }}" class="featured-collection__product-button customButton blueButton">View Product</a>
          </div>
        </div>
      {% else %}
        {% comment %} Placeholder for when no product is selected {% endcomment %}
        <div class="featured-collection__product-card">
          <div class="featured-collection__image-wrapper">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="featured-collection__product-info">
            <h3 class="featured-collection__product-title">Example Product</h3>
            <p class="featured-collection__product-price">$999.00</p>
            <span class="featured-collection__product-button">View Product</span>
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {% if section.blocks.size == 0 %}
      {%- for i in (1..3) -%}
        <div class="featured-collection__product-card">
          <div class="featured-collection__image-wrapper">
            {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="featured-collection__product-info">
            <h3 class="featured-collection__product-title">Example Product {{ i }}</h3>
            <p class="featured-collection__product-price">$999.00</p>
            <span class="featured-collection__product-button">View Product</span>
          </div>
        </div>
      {%- endfor -%}
    {% endif %}
  </div>

  {% if section.settings.button_link != blank and section.settings.button_text != blank %}
    <div class="featured-collection__cta-wrapper">
      <a href="{{ section.settings.button_link }}" class="featured-collection__main-button">
        {{ section.settings.button_text | escape }}
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Featured Smart Toilets",
    "class": "featured-smart-toilets-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "The Future of Comfort in Your Bathroom"
      }, {
        "type": "richtext",
        "id": "subheading",
        "label": "Subheading",
        "default": "<p>Discover our collection of smart toilets, combining innovative design and unparalleled features.</p>"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "View Entire Collection"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "info": "Link to the full smart toilets collection."
      }
    ],
    "blocks": [
      {
        "type": "product_card",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Select Product"
          }
        ],
        "limit": 4
      }
    ],
    "presets": [
      {
        "name": "Featured Smart Toilets",
        "category": "Products",
        "blocks": [
          {
            "type": "product_card"
          }, {
            "type": "product_card"
          }, {
            "type": "product_card"
          }
        ]
      }
    ]
  }
{% endschema %}