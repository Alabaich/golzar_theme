<style>
  .brand-text-section {
    width: 100%;
  }

  .brand-text-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
    width: 100%;
    text-align: left !important;
    align-items: flex-start !important;
    margin-left: 0;
    margin-right: auto;
  }

  .brand-text-label {
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.15em;
    color: #666;
    font-weight: 600;
    margin-bottom: 10px;
    display: block;
  }

  .brand-text-heading {
    font-size: 3.5rem;
    line-height: 1.1;
    margin: 0;
    color: #000;
    letter-spacing: -0.03em;
    font-weight: 700;
    max-width: 100%;
  }

  .brand-text-content {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #333;
    margin-top: 10px;
    max-width: 600px;
  }

  .brand-text-content p {
    margin-bottom: 20px;
  }

  .brand-text-content p:last-child {
    margin-bottom: 0;
  }

  .brand-text-btn {
    display: inline-block;
    padding: 16px 40px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 0;
    font-weight: 500;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    margin-top: 25px;
    transition: opacity 0.3s ease;
  }

  .brand-text-btn:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .brand-text-heading {
      font-size: 2.5rem;
    }

    .brand-text-content {
      font-size: 1rem;
      max-width: 100%;
    }
  }
</style>

<div class="brand-text-section pageWidth">
  <div class="brand-text-container" style="max-width: {{ section.settings.content_width }}px;">

    <div class="brand-text-inner">
      {% if section.settings.label != blank %}
        <span class="brand-text-label">{{ section.settings.label | escape }}</span>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="brand-text-heading">{{ section.settings.heading | escape }}</h2>
      {% endif %}

      <div class="brand-text-content">
        {% if section.settings.text != blank %}
          {{ section.settings.text }}
        {% else %}
          <p>We believe in simple, functional design that improves with use. Our journey began with a single idea: to create products that last a lifetime and tell a story.</p>
        {% endif %}
      </div>

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="brand-text-btn">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Brand Story Text",
    "settings": [
      {
        "type": "header",
        "content": "Layout Settings"
      },
      {
        "type": "range",
        "id": "content_width",
        "min": 600,
        "max": 1400,
        "step": 50,
        "unit": "px",
        "label": "Content Container Width",
        "default": 1000
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "label",
        "label": "Small Label",
        "default": "Our Philosophy"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Designed for life."
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Description",
        "default": "<p>We believe in simple, functional design that improves with use. Our journey began with a single idea: to create products that last a lifetime and tell a story.</p>"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Read Our Story"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Brand Story Text"
      }
    ]
  }
{% endschema %}