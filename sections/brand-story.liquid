<style>
  .brand-text-container {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 25px;
    position: relative;
  } /* test */

  .brand-text-container.text-center {
    text-align: center;
    align-items: center;
  }

  .brand-text-container.text-left {
    text-align: left;
    align-items: flex-start;
    border-left: 1px solid transparent;
  }

  .brand-text-label {
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 2px;
    color: #888;
    font-weight: 600;
    margin-bottom: 10px;
    display: inline-block;
  }

  .brand-text-heading {
    font-size: 3.2rem;
    line-height: 1.1;
    margin: 0;
    color: #111;
    letter-spacing: -0.02em;
    max-width: 90%;
  }

  /* Основной текст */
  .brand-text-content {
    font-size: 1.15rem;
    line-height: 1.75;
    /* Больше воздуха между строками */
    color: #444;
    margin-top: 10px;
  }

  /* Ограничиваем ширину текста при левом выравнивании для удобства чтения */
  .text-left .brand-text-content {
    max-width: 650px;
  }

  .brand-text-content p {
    margin-bottom: 25px;
  }

  .brand-text-content p:last-child {
    margin-bottom: 0;
  }

  /* Кнопка */
  .brand-text-btn {
    display: inline-block;
    padding: 15px 40px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 2px;
    /* Чуть менее скругленная, более строгая */
    font-weight: 500;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    margin-top: 20px;
    transition: all 0.3s ease;
  }

  .brand-text-btn:hover {
    background-color: #333;
    transform: translateY(-2px);
  }

  /* Адаптив для мобильных */
  @media (max-width: 768px) {
    .brand-text-section {
      padding: 50px 0;
    }
    .brand-text-heading {
      font-size: 2.2rem;
    }
    .text-left .brand-text-content {
      max-width: 100%;
    }
    .brand-text-container.text-left {
      padding-left: 0;
      border: none;
    }
  }
</style>

<div class="brand-text-section pageWidth">
  <div class="brand-text-container text-{{ section.settings.text_alignment }}" style="max-width: {{ section.settings.content_width }}px; margin-{{ section.settings.text_alignment }}: 0;">

    <div class="brand-text-inner">
      {% if section.settings.label != blank %}
        <span class="brand-text-label">{{ section.settings.label | escape }}</span>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="brand-text-heading">{{ section.settings.heading | escape }}</h2>
      {% endif %}

      <div class="brand-text-content">
        {% if section.settings.text != blank %}
          {{ section.settings.text }}
        {% else %}
          <p>Use this section to focus purely on text. Great for manifestos, mission statements, or detailed brand introductions without visual distractions.</p>
        {% endif %}
      </div>

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="brand-text-btn">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Brand Story Text",
    "settings": [
      {
        "type": "header",
        "content": "Layout Settings"
      },
      {
        "type": "range",
        "id": "content_width",
        "min": 600,
        "max": 1400,
        "step": 50,
        "unit": "px",
        "label": "Content Container Width",
        "default": 1000,
        "info": "Controls the overall width of the section area."
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left (Editorial)"
          }, {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "left"
      },
      {
        "type": "header",
        "content": "Content"
      }, {
        "type": "text",
        "id": "label",
        "label": "Small Label",
        "default": "Our Philosophy"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Designed for life."
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Description",
        "default": "<p>We believe in simple, functional design that improves with use. Our journey began with a single idea: to create products that last a lifetime and tell a story.</p>"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Read Our Story"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Brand Story Text"
      }
    ]
  }
{% endschema %}