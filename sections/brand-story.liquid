<style>
  .brand-text-container {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .brand-text-container.text-center {
    text-align: center;
    align-items: center;
  }

  .brand-text-container.text-left {
    text-align: left;
    align-items: flex-start;
  }

  .brand-text-label {
    text-transform: uppercase;
    font-size: 0.85em;
    letter-spacing: 2px;
    color: #666;
    font-weight: 600;
    margin-bottom: 5px;
    display: block;
  }

  .brand-text-heading {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0;
    color: #111;
  }

  .brand-text-content {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #444;
  }

  .brand-text-content p {
    margin-bottom: 20px;
  }

  .brand-text-content p:last-child {
    margin-bottom: 0;
  }

  .brand-text-btn {
    display: inline-block;
    padding: 14px 35px;
    background-color: #111;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    margin-top: 15px;
    transition: opacity 0.3s ease;
  }

  .brand-text-btn:hover {
    opacity: 0.8;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .brand-text-heading {
      font-size: 2rem;
    }
    .brand-text-section {
      padding: 40px 0;
    }
  }
</style>

<div class="brand-text-section pageWidth">
  <div class="brand-text-container text-{{ section.settings.text_alignment }}" style="max-width: {{ section.settings.content_width }}px;">

    {% if section.settings.label != blank %}
      <span class="brand-text-label">{{ section.settings.label | escape }}</span>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="brand-text-heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}

    <div class="brand-text-content">
      {% if section.settings.text != blank %}
        {{ section.settings.text }}
      {% else %}
        <p>Write a compelling statement about your brand here. Focus on your mission, your values, or the unique story behind your products.</p>
      {% endif %}
    </div>

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="brand-text-btn">
        {{ section.settings.button_label | escape }}
      </a>
    {% endif %}

  </div>
</div>

{% schema %}
  {
    "name": "Brand Story",
    "settings": [
      {
        "type": "header",
        "content": "Layout Settings"
      },
      {
        "type": "range",
        "id": "content_width",
        "min": 400,
        "max": 1200,
        "step": 20,
        "unit": "px",
        "label": "Content Max Width",
        "default": 800,
        "info": "Keeps text readable on large screens."
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "center",
            "label": "Center"
          }, {
            "value": "left",
            "label": "Left"
          }
        ],
        "default": "center"
      },
      {
        "type": "header",
        "content": "Content"
      }, {
        "type": "text",
        "id": "label",
        "label": "Small Label",
        "default": "Our Philosophy"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Simplicity is the ultimate sophistication."
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Description",
        "default": "<p>Use this section to focus purely on text. Great for manifestos, mission statements, or detailed brand introductions without visual distractions.</p>"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Read Our Story"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Brand Story"
      }
    ]
  }
{% endschema %}