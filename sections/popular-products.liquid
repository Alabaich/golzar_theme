<div class="popular-products-main">
  <div class="popular-products-inn">
    <div class="popular-products">
      <div class="qdsad">
        <h2 class="section-title">{{ section.settings.popular_title | escape }}</h2>
        {% if section.settings.show_more_link != blank and section.settings.featured_collection != blank %}
          <a href="{{ collections[section.settings.featured_collection].url | default: section.settings.show_more_link }}" class="show-more">Show More</a>
        {% elsif section.settings.show_more_link != blank %}
          <a href="{{ section.settings.show_more_link }}" class="show-more">Show More</a>
        {% endif %}
      </div>

      {%- assign
 collection_to_display = collections[section.settings.featured_collection]
      -%}
      {%- assign products_limit = section.settings.products_limit -%}

      <div class="products-grid">
        {%- if collection_to_display != blank and collection_to_display.products_count > 0 -%}
          {%- for product in collection_to_display.products limit: products_limit -%}
            {%- liquid
              assign current_variant = product.selected_or_first_available_variant
            -%}
            <div class="product-item">
              <a href="{{ product.url | within: collection_to_display }}" class="product-image-link">
                {%- if product.featured_image != blank -%}
                  <div class="product-image">
                    <img
                      src="{{ product.featured_image | image_url: width: 300 }}"
                      alt="{{ product.title | escape }}"
                      class="prod-img"
                      loading="lazy"
                      width="300"
                      height="{{ 300 | divided_by: product.featured_image.aspect_ratio | round }}">
                  </div>
                {%- else -%}
                  <div class="product-image placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </a>
              <h3 class="product-title">
                <a href="{{ product.url | within: collection_to_display }}">{{ product.title | escape }}</a>
              </h3>

              <div class="product-price-container">
                {%- if current_variant.compare_at_price > current_variant.price -%}
                  <span class="product-price--sale">
                    {{ current_variant.price | money }}
                  </span>
                  <s class="product-price--original">
                    {{ current_variant.compare_at_price | money }}
                  </s>
                {%- else -%}
                  <span class="product-price--regular">
                    {{ current_variant.price | money }}
                  </span>
                {%- endif -%}
              </div>

              <div class="product-actions">
                <a href="{{ product.url | within: collection_to_display }}" class="product-cta">View Product</a>
              </div>
            </div>
          {%- endfor -%}
        {%- else -%}
          <p class="products-grid__no-products-message">
            {% if section.settings.featured_collection == blank %}
              Please select a collection in the theme customizer.
            {% else %}
              No products found in this collection.
            {% endif %}
          </p>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Popular Products",
    "class": "section popular-products-section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "popular_title",
        "label": "Title",
        "default": "Popular Products"
      }, {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "products_limit",
        "min": 2,
        "max": 16,
        "step": 1,
        "label": "Number of products to show",
        "default": 4
      }, {
        "type": "url",
        "id": "show_more_link",
        "label": " Fallback 'Show More' Link",
        "info": "Links to the selected collection if a collection is chosen. Otherwise, uses this fallback link."
      }
    ],
    "presets": [
      {
        "name": "Popular Products"
      }
    ]
  }
{% endschema %}

{% style %}
  #shopify-section-{{ section.id }} {
    padding: 40px 10%;
    background: #38739E1A;
  }

  .popular-products-inn {
    margin: 0 auto;
  }

  .qdsad {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
  }

  .section-title {
    font-size: 50px;
    font-family: 'Black Mango'
    , sans-serif;
    font-weight: 600;
    margin: 0;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .products-grid__no-products-message {
    grid-column: 1 / -1;
    text-align: center;
    padding: 20px;
  }

  .product-item {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    background: white;
    display: flex;
    flex-direction: column;
  }

  .product-image-link {
    display: block;
    text-decoration: none;
  }

  .product-image {
    margin-bottom: 1rem;
    background-color: #f9f9f9;
    position: relative;
    overflow: hidden;
    aspect-ratio: 4 / 3;
  }

  .product-image.placeholder svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .prod-img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
  }

  .product-title {
    font-size: 18px;
    font-family: 'Open Sans'
    , sans-serif;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }
  .product-title a {
    text-decoration: none;
    color: inherit;
  }
  .product-title a:hover {
    text-decoration: underline;
  }

  .product-price-container {
    font-family: 'Open Sans'
    , sans-serif;
    font-size: 16px;
    margin-bottom: 1rem;
  }

  .product-price--sale {
    color: #D9534F;
    font-weight: bold;
  }

  .product-price--original {
    color: #777777;
    text-decoration: line-through;
    margin-left: 8px;
    font-size: 0.9em;
  }

  .product-price--regular {
    color: #1c1c1c;
  }

  .product-actions {
    margin-top: auto;
  }

  .product-cta {
    display: block;
    background-color: #003087;
    text-align: center;
    color: white;
    border-radius: 999px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
    text-transform: uppercase;
    width: 100%;
    padding: 12px 24px;
    box-sizing: border-box;
  }

  .product-cta:hover {
    background-color: #00205b;
  }

  .show-more {
    display: inline-block;
    text-align: center;
    padding: 14px 38px;
    color: #151515;
    border-radius: 9999px;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    border: 1px solid #151515;
    transition: background-color 0.3s ease
    , color 0.3s ease;
  }
  .show-more:hover {
    background-color: #151515;
    color: white;
  }

  @media (max-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .section-title {
      font-size: 40px;
    }
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
    .qdsad {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
    .section-title {
      font-size: 32px;
    }
    .show-more {
      width: auto;
      align-self: flex-start;
    }
    #shopify-section-{{ section.id }} {
      padding: 30px 5%;
    }
  }
{% endstyle %}