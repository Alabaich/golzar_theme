<style>
  .hs-three-blocks-section {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  .hs-three-blocks-section .hs-block-item {
    flex: 1;
    min-width: 300px;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    height: 250px;
    transition: transform 0.3s ease;
  }

  .pageWidth.hs-three-blocks-section {
    padding-top: 0;
    padding-bottom: 0;
  }

  .hs-block-item:hover {
    transform: translateY(-5px);
  }

  .hs-block-item a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  .hs-block-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .hs-block-item:hover img {
    transform: scale(1.05);
  }

  .hs-three-blocks-section .hs-block-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 25px;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 15px;
  }

  .hs-block-content-top {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .hs-block-content-bottom {
    margin-top: auto;
  }

  .hs-three-blocks-section .hs-block-content h3 {
    margin: 0;
    color: #fff;
  }

  .hs-three-blocks-section .hs-block-content p {
    margin: 0;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .hs-three-blocks-section {
      flex-direction: column;
    }

    .hs-block-item {
      height: 300px;
    }
  }
</style>

<div class="page-width pageWidth">
  <div class="hs-three-blocks-section">
    {% for block in section.blocks %}
      {% if block.type == 'promo_block' %}
        <div class="hs-block-item">
          <a href="{{ block.settings.button_url }}">
            <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.heading }}">
            <div class="hs-block-content">
              <div class="hs-block-content-top">
                <h3>{{ block.settings.heading }}</h3>
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Three Promo Blocks",
    "class": "index-section",
    "max_blocks": 3,
    "settings": [
      {
        "type": "paragraph",
        "content": "Add up to 3 promo blocks with full image links"
      }
    ],
    "blocks": [
      {
        "type": "promo_block",
        "name": "Promo Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Block Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Block Heading"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Block Text"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Block Link URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Three Promo Blocks",
        "category": "Custom",
        "blocks": [
          {
            "type": "promo_block"
          },
          {
            "type": "promo_block"
          },
          {
            "type": "promo_block"
          }
        ]
      }
    ]
  }
{% endschema %}