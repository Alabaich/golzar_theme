<style>
  .hs-three-blocks-section {
    display: flex;
    gap: 20px;
    margin-top: 40px;
    flex-wrap: wrap;
  }

  .hs-three-blocks-section .hs-block-item {
    flex: 1;
    min-width: 300px;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    height: 250px;
  }

  .hs-block-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hs-three-blocks-section .hs-block-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 25px;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 15px;
  }

  .hs-block-content-top {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .hs-block-content-bottom {
    margin-top: auto;
  }

  .hs-three-blocks-section .hs-block-content h3 {
    margin: 0;
    color: #fff;
  }

  .hs-three-blocks-section .hs-block-content p {
    margin: 0;
    font-size: 16px;
  }

  .hs-three-blocks-section .hs-block-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.1) 100%);
    z-index: 1;
    pointer-events: none;
    border-radius: 12px;
  }

  .hs-three-blocks-section .hs-block-content {
    z-index: 2;
  }

  .hs-block-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: transparent;
    color: #fff;
    text-decoration: none;
    border-radius: 150px;
    font-weight: 600;
    width: fit-content;
    transition: all 0.3s ease;
    border: 1px solid #fff;
  }

  .hs-block-btn:hover {
    background-color: #fff;
    color: #2c2d2c;
    transform: translateY(-2px);
  }

  .hs-block-btn:hover svg path {
    fill: #2c2d2c;
  }

  @media (max-width: 768px) {
    .hs-three-blocks-section {
      flex-direction: column;
    }

    .hs-block-item {
      height: 300px;
    }
  }
</style>

<div class="page-width pageWidth">
  <div class="hs-three-blocks-section">
    {% for block in section.blocks %}
      {% if block.type == 'promo_block' %}
        <div class="hs-block-item">
          <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.heading }}">
          <div class="hs-block-content">
            <div class="hs-block-content-top">
              <h3>{{ block.settings.heading }}</h3>
              <p>{{ block.settings.text }}</p>
            </div>
            <div class="hs-block-content-bottom">
              <a href="{{ block.settings.button_url }}" class="hs-block-btn">
                {{ block.settings.button_label }}
                <svg
                  width="5"
                  height="8"
                  viewBox="0 0 5 8"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M0.195262 0.195262C0.455612 -0.0650874 0.877722 -0.0650874 1.13807 0.195262L4.4714 3.5286C4.73175 3.78894 4.73175 4.21106 4.4714 4.4714L1.13807 7.80474C0.877722 8.06509 0.455612 8.06509 0.195262 7.80474C-0.0650874 7.54439 -0.0650874 7.12228 0.195262 6.86193L3.05719 4L0.195262 1.13807C-0.0650871 0.877722 -0.0650871 0.455612 0.195262 0.195262Z"
                    fill="white" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Three Promo Blocks",
    "limit": 3,
    "blocks": [
      {
        "type": "promo_block",
        "name": "Promo Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Block Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Block Heading",
            "default": "Block Heading"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Block Text",
            "default": "Description text for this block"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Three Promo Blocks",
        "category": "Image",
        "blocks": [
          {
            "type": "promo_block"
          },
          {
            "type": "promo_block"
          }, {
            "type": "promo_block"
          }
        ]
      }
    ]
  }
{% endschema %}