<style>
  .brand-grid-list-container .brands-grid-heading{
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 25px;
  }

    .brand-grid-list-container .brands-grid-heading h2{
    margin: 0;
      line-height: 110%; 
  }
      .brand-grid-list-container .brands-grid-heading p{
    margin: 0;
      line-height: normal; 
  }

  .brands-grid{

display: grid;
grid-template-columns: repeat(4, 1fr);
grid-column-gap: 25px;
grid-row-gap: 25px;

  }
</style>


<div class="brand-grid-list-container pageWidth page-width">
  <div class="brands-grid-heading">
    <h2>Our Brands Collection</h2>
    <p class="bodyText">
      We take pride in offering a carefully selected range of trusted bathroom brands to bring you both quality and style.
    </p>
  </div>
  <div class="brands-grid">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.linkToBrand | default: '#' }}" class="brand-card" {{ block.shopify_attributes }}>

        {%- if block.settings.showcase_image != blank -%}
          <img class="showcase-image"
               src="{{ block.settings.showcase_image | image_url: width: 500 }}"
               alt="{{ block.settings.showcase_image.alt | default: block.settings.text | escape }}"
               loading="lazy"
               width="500"
               height="{{ 500 | divided_by: block.settings.showcase_image.aspect_ratio | round }}">
        {%- endif -%}

        <div class="brand-card-content">
          {%- if block.settings.logo_image != blank -%}
            <img class="brand-logo"
                 src="{{ block.settings.logo_image | image_url: width: 200 }}"
                 alt="{{ block.settings.logo_image.alt | default: 'Logo for ' | append: block.settings.text | escape }}"
                 loading="lazy"
                 width="200"
                 height="{{ 200 | divided_by: block.settings.logo_image.aspect_ratio | round }}">
          {%- endif -%}

          {%- if block.settings.text != blank -%}
            <p>{{ block.settings.text | escape }}</p>
          {%- endif -%}
        </div>

      </a>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
        "name": "Brands Grid Section",
    "class": "brands-grid-section",
  "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "main_heading",
        "label": "Main Heading",
        "default": "Browse brand catalogues"
      }
    ],
    "blocks": [
      {
        "type": "one_brand",
        "name": "One Brand",
        "settings": [
          {
            "type": "image_picker",
            "id": "showcase_image",
            "label": "Showcase Image (Main Visual)"
          },
          {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Brand Logo Image"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }, {
            "type": "url",
            "id": "linkToBrand",
            "label": "Link To Brand Page"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brands Grid Section",
        "category": "Image"
      }
    ]
  }
{% endschema %}