<style>
  .brand-grid-list-container .brands-grid-heading{
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 15px;
  }

    .brand-grid-list-container .brands-grid-heading h2{
    margin: 0;
      line-height: 110%; 
  }
</style>


<div class="brand-grid-list-container">
  <div class="brands-grid-heading">
    <h2>Our Brands Collection</h2>
    <p class="bodyText">
      We take pride in offering a carefully selected range of trusted bathroom brands to bring you both quality and style.
    </p>
  </div>
  <div class="brands-grid"></div>
</div>

{% schema %}
  {
        "name": "Brands Grid Section",
    "class": "brands-grid-section",
  "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "main_heading",
        "label": "Main Heading",
        "default": "Browse brand catalogues"
      }
    ],
    "blocks": [
      {
        "type": "one_brand",
        "name": "One Brand",
        "settings": [
          {
            "type": "image_picker",
            "id": "showcase_image",
            "label": "Showcase Image (Main Visual)"
          },
          {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Brand Logo Image"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }, {
            "type": "url",
            "id": "linkToBrand",
            "label": "Link To Brand Page"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brands Grid Section",
        "category": "Image"
      }
    ]
  }
{% endschema %}