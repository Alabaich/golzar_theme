{% style %}
  /* Section Padding */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Main Wrapper & Background */
  .hq-wrapper {
    position: relative;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 650px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  /* Gradient Overlay - Left (Solid White) to Right (Transparent) */
  .hq-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0.9) 35%, rgba(255,255,255,0) 100%);
    z-index: 1;
    pointer-events: none; /* Allows clicking through if needed */
  }

  /* Content Grid */
  .hq-grid {
    position: relative;
    z-index: 2; /* Sits above overlay */
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    width: 100%;
  }

  /* Left Text Column */
  .hq-text-col {
    flex: 1;
    min-width: 300px;
    max-width: 550px;
    padding-right: 20px;
  }

  .hq-upper-title {
    display: block;
    text-transform: uppercase;
    font-size: 1.4rem;
    letter-spacing: 1px;
    color: #333;
    margin-bottom: 1rem;
    font-weight: 400;
  }

  .hq-main-title {
    font-size: 4.5rem;
    line-height: 1;
    font-weight: 700;
    color: #222;
    margin: 0 ;
    text-transform: uppercase;
    word-wrap: break-word;
  }

  .hq-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #444;
    max-width: 400px;
  }

  /* Right Form Column */
  .hq-form-col {
    flex: 0 0 450px;
    max-width: 100%;
  }

  /* The Card Style */
  .hq-card {
    background-color: #111; /* Dark Card */
    padding: 40px;
    border-radius: 20px;
    color: #fff;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }

  .hq-card h2 {
    color: #fff;
    margin-top: 0;
    margin-bottom: 25px;
    text-align: center;
    text-transform: uppercase;
    font-size: 3rem;
    letter-spacing: 1px;
  }

  /* Form Inputs */
  .hq-form-field {
    margin-bottom: 15px;
  }

  .hq-input,
  .hq-select {
    width: 100%;
    background-color: transparent;
    border: 1px solid rgba(255,255,255,0.4);
    border-radius: 50px; /* Pill shape */
    padding: 12px 20px;
    color: #fff;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    appearance: none;
  }

  .hq-input::placeholder {
    color: rgba(255,255,255,0.6);
  }

  .hq-input:focus,
  .hq-select:focus {
    outline: none;
    border-color: #fff;
    background-color: rgba(255,255,255,0.05);
  }

  /* Custom Arrow for Select */
  .hq-select-wrapper {
    position: relative;
  }
  
  .hq-select {
    cursor: pointer;
    color: rgba(255,255,255,0.6); /* Placeholder look initially */
  }
  .hq-select:not(:invalid) {
    color: #fff;
  }

  .hq-select-wrapper::after {
    content: 'â–¼';
    font-size: 1.25rem;
    color: #fff;
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
  }

  /* Submit Button */
  .hq-submit {
    width: 100%;
    background-color: #fff;
    color: #000;
    border: none;
    border-radius: 50px;
    padding: 15px;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s;
  }

  .hq-submit:hover {
    background-color: #e0e0e0;
  }

  /* Feedback Messages */
  .hq-message {
    margin-bottom: 15px;
    font-size: 0.9rem;
  }
  .hq-success { color: #4caf50; }
  .hq-error { color: #ff6b6b; }

  /* Responsive Adjustments */
  @media screen and (max-width: 990px) {
    .hq-main-title { font-size: 3rem; }
    .hq-overlay {
       /* On tablet/mobile, make gradient cover more to ensure text readability */
       background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.8) 50%, rgba(255,255,255,0) 100%);
    }
  }

  @media screen and (max-width: 750px) {
    .hq-wrapper { padding: 40px 0; }
    .hq-grid { flex-direction: column; gap: 30px; }
    .hq-text-col { text-align: center; padding-right: 0; }
    .hq-description { margin: 0 auto; }
    .hq-form-col { flex: auto; width: 100%; }
    
    /* Simplify overlay on mobile */
    .hq-overlay {
      background: rgba(255,255,255,0.85);
    }
  }
{% endstyle %}

<div class="hq-wrapper section-{{ section.id }}-padding"
     style="background-image: url('{% if section.settings.bg_image != blank %}{{ section.settings.bg_image | image_url: width: 2000 }}{% else %}https://cdn.shopify.com/s/files/1/0628/3352/4973/files/placeholder-kitchen.jpg?v=1700000000{% endif %}');">
  
  <!-- Gradient Overlay -->
  <div class="hq-overlay"></div>

  <!-- Standard Page Width Container -->
  <div class="page-width" style="width: 100%;">
    <div class="hq-grid">
      
      <!-- Left Column: Text -->
      <div class="hq-text-col">
        {% if section.settings.upper_title != blank %}
          <span class="hq-upper-title">{{ section.settings.upper_title }}</span>
        {% endif %}
        
        {% if section.settings.title != blank %}
          <h1 class="hq-main-title">{{ section.settings.title | newline_to_br }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="hq-description">{{ section.settings.description }}</div>
        {% endif %}
      </div>

      <!-- Right Column: Form -->
      <div class="hq-form-col">
        <div class="hq-card">
          <h2>{{ section.settings.form_heading }}</h2>
          
          {% form 'contact' %}
            
            {% if form.posted_successfully? %}
              <p class="hq-message hq-success" tabindex="-1" autofocus>
                Thanks! We'll get back to you shortly.
              </p>
            {% elsif form.errors %}
              <div class="hq-message hq-error">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="hq-form-field">
              <input class="hq-input" 
                     autocomplete="name" 
                     type="text" 
                     id="ContactForm-name-{{ section.id }}" 
                     name="contact[Name]" 
                     value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" 
                     placeholder="Name*" 
                     required>
            </div>

            <div class="hq-form-field">
              <input class="hq-input" 
                     type="tel" 
                     id="ContactForm-phone-{{ section.id }}" 
                     autocomplete="tel" 
                     name="contact[Phone]" 
                     pattern="[0-9\-]*" 
                     value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" 
                     placeholder="Phone*" 
                     required>
            </div>
            
            <div class="hq-form-field">
              <input
                class="hq-input"
                autocomplete="email"
                type="email"
                id="ContactForm-email-{{ section.id }}"
                name="contact[email]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                placeholder="Your Email*"
                required
              >
            </div>

            <div class="hq-form-field">
              <input class="hq-input" 
                     type="text" 
                     id="ContactForm-address-{{ section.id }}" 
                     name="contact[Address]" 
                     placeholder="Address*" 
                     required>
            </div>

            <div class="hq-form-field hq-select-wrapper">
              <select id="ContactForm-service-{{ section.id }}" name="contact[Service Type]" class="hq-select">
                  <option value="" disabled selected>Select service type</option>
                  <option value="Kitchen">Kitchen Renovation</option>
                  <option value="Bathroom">Bathroom Renovation</option>
                  <option value="Full Home">Full Home Reno</option>
                  <option value="Consultation">Consultation</option>
              </select>
            </div>

            <button type="submit" class="hq-submit">
              Submit Form
            </button>

          {% endform %}
        </div>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Quote Form",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "upper_title",
      "label": "Upper Title",
      "default": "MAGIC RENO"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Main Title",
      "default": "TRUSTED\nRENOVATION\nSERVICES"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>We are a team dedicated to transforming your space into a place of your dreams.</p>"
    },
    {
      "type": "header",
      "content": "Form Settings"
    },
    {
      "type": "text",
      "id": "form_heading",
      "label": "Form Heading",
      "default": "GET A QUOTE TODAY!"
    }
  ],
  "presets": [
    {
      "name": "Hero Quote Form"
    }
  ]
}
{% endschema %}