      align-self: flex-start;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="center"] .gh-hero__button {
      align-self: center;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="right"] .gh-hero__button {
      align-self: flex-end;
    }
  }

