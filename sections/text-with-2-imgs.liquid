    display: block;
    font-size: {{ section.settings.stat_label_size }}px;
    color: {{ section.settings.stat_label_color }};
    font-family: {{ section.settings.body_font.family }}, 
    {{ section.settings.body_font.fallback_families }};
    line-height: 1.4;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__image-column {
    position: relative;
    min-height: 300px;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__image-wrapper {
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
    position: absolute;
    background-color: #f0f0f0;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__image-wrapper img
  , .gh-hero-{{ section.id }}
  .gh-hero__image-wrapper svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__image-wrapper--1 {
    width: 65%;
    padding-bottom: calc(65% *(2 / 3));
    top: 0;
    right: 0;
    z-index: 2;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__image-wrapper--2 {
    width: 80%;
    padding-bottom: calc(80% *(2 / 3));
    bottom: 0;
    left: 0;
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    .gh-hero-{{ section.id }} .gh-hero__image-column {
      min-height: 350px;
      margin-top: 20px;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__image-wrapper--1 {
      width: 70%;
      padding-bottom: calc(70% *(2 / 3));
    }
    .gh-hero-{{ section.id }}
    .gh-hero__image-wrapper--2 {
      width: 85%;
      padding-bottom: calc(85% *(2 / 3));
    }
  }
  @media screen and (max-width: 480px) {
    .gh-hero-{{ section.id }} .gh-hero__image-column {
      min-height: 280px;
    }
  }
</style>

<section class="gh-hero-{{ section.id }}" aria-labelledby="{{ section_aria_label_id }}">
  <div class="gh-hero__page-width-container">
    <div class="gh-hero__grid">
      <div
        class="gh-hero__text-column"
        data-text-align="{{ section.settings.text_align_desktop }}"
        data-text-align-mobile="{{ section.settings.text_align_mobile }}">
        <h1
          class="gh-hero__heading"
          id="{{ section_aria_label_id }}"
          title="{{ heading_content | escape }}">
          {{ heading_content }}
        </h1>
        {% if description != blank %}
          <p class="gh-hero__description" title="{{ description | escape }}">{{ description }}</p>
        {% endif %}

        {% if button_text_content != blank and button_link != blank %}
          <a
            href="{{ button_link }}"
            class="gh-hero__button"
            title="{{ button_text_content | escape }}">
            {{ button_text_content }}
            {% if show_button_arrow %}
              <span class="gh-hero__button-arrow" aria-hidden="true">&rarr;</span>
            {% endif %}
          </a>
        {% elsif button_text_content != blank %}
          <span
            class="gh-hero__button"
            style="cursor:default;"
            title="{{ button_text_content | escape }}">
            {{ button_text_content }}
            {% if show_button_arrow %}
              <span class="gh-hero__button-arrow" aria-hidden="true">&rarr;</span>
            {% endif %}
          </span>
        {% endif %}

        {% if section.blocks.size > 0 %}
          <div class="gh-hero__stats-area">
            {% for block in section.blocks %}
              {% if block.type == 'stat_item' %}
                <div class="gh-hero__stat-item" {{ block.shopify_attributes }}>
                  {% if block.settings.stat_value != blank %}
                    <span class="gh-hero__stat-value" title="{{ block.settings.stat_value | escape }}">{{ block.settings.stat_value }}</span>
                  {% endif %}
                  {% if block.settings.stat_label != blank %}
                    <span class="gh-hero__stat-label" title="{{ block.settings.stat_label | escape }}">{{ block.settings.stat_label }}</span>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
      <div class="gh-hero__image-column">
        <div class="gh-hero__image-wrapper gh-hero__image-wrapper--2">
          {% if image_2 != blank %}
            {{ image_2 | image_url: width: 1000 | image_tag: alt: image_2_alt, title: image_2_title, loading: 'lazy', widths: '300,400,600,800,1000,1200' }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'gh-hero__placeholder-svg' }}
          {% endif %}
        </div>
        <div class="gh-hero__image-wrapper gh-hero__image-wrapper--1">
          {% if image_1 != blank %}
            {{ image_1 | image_url: width: 800 | image_tag: alt: image_1_alt, title: image_1_title, loading: 'lazy', widths: '200,300,400,600,800' }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'gh-hero__placeholder-svg' }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<script type="application/ld+json">
  {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "{{ shop.name | escape }}",
      {% if section.settings.company_brand_name != blank %}
      "alternateName" : "{{ section.settings.company_brand_name | escape }}",
      {% endif %}
      "url": "{{ shop.url | append: page.url }}",
      {%- assign hero_logo_url = shop.brand.logo | image_url: width: 200 | default: (settings.logo | image_url: width: 200 ) -%}
      {% if hero_logo_url != blank %}
        "logo" : "{{ hero_logo_url | prepend: 'https:' }}",
        {% endif %}
        "description": "{{ description | default: heading_content | strip_html | strip_newlines | escape }}",
        {% if image_1 or image_2 %}
          "image" : [{% if image_1 %}"{{ image_1 | image_url: width: 1200 | prepend: 'https:' }}"{% endif %} {% if image_1 and image_2 %},{% endif %}{% if image_2 %}"{{ image_2 | image_url: width: 1200 | prepend: 'https:' }}"{% endif %}],
              {% endif %}
              {% if button_link != blank %}
                "potentialAction" : {
                  "@type": "ViewAction",
                  "target": "{{ button_link | prepend: shop.url }}",
                  "name": "{{ button_text_content | escape }}"
                }
                {% endif %}
              }
</script>

