{%- liquid
  assign main_heading = section.settings.main_heading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign show_button_arrow = section.settings.show_button_arrow

  assign image_1 = section.settings.image_1
  assign image_1_alt_setting = section.settings.image_1_alt
  assign image_1_title_setting = section.settings.image_1_title

  assign image_2 = section.settings.image_2
  assign image_2_alt_setting = section.settings.image_2_alt
  assign image_2_title_setting = section.settings.image_2_title

  assign default_heading = "At Golzar Home, we make quality our standard"
  assign default_description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vehicula massa in enim luctus. Rutrum arcu."
  assign default_button_text = "CONTACT US"

  assign heading_content = main_heading | default: default_heading
  assign button_text_content = button_text | default: default_button_text

  assign image_1_alt = image_1_alt_setting | default: image_1.alt | default: "Golzar Home Feature Image 1" | escape
  assign image_1_title = image_1_title_setting | default: image_1_alt | escape

  assign image_2_alt = image_2_alt_setting | default: image_2.alt | default: "Golzar Home Feature Image 2" | escape
  assign image_2_title = image_2_title_setting | default: image_2_alt | escape

  assign section_aria_label_id = "HeroSectionHeading-" | append: section.id
-%}

<style>
  .gh-hero-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__page-width-container {
    max-width: var(--page-width, 1200px);
    margin-left: auto;
    margin-right: auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    align-items: center;
  }

  @media screen and (min-width: 769px) {
    .gh-hero-{{ section.id }} .gh-hero__grid {
      grid-template-columns: {{ section.settings.text_column_width_desktop }}
      % 1fr;
      gap: {{ section.settings.column_gap_desktop }}px;
    }
  }

  .gh-hero-{{ section.id }}
  .gh-hero__text-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: {{ section.settings.text_align_mobile }};
  }

  @media screen and (min-width: 769px) {
    .gh-hero-{{ section.id }} .gh-hero__text-column {
      text-align: {{ section.settings.text_align_desktop }};
    }
  }

  .gh-hero-{{ section.id }}
  .gh-hero__heading {
    font-size: {{ section.settings.heading_size_mobile }}px;
    color: {{ section.settings.heading_color }};
    font-family: {{ section.settings.heading_font.family }}, 
    {{ section.settings.heading_font.fallback_families }};
    font-weight: {{ section.settings.heading_font.weight }};
    font-style: {{ section.settings.heading_font.style }};
    line-height: 1.2;
    margin: 0 0 15px;
  }

  @media screen and (min-width: 769px) {
    .gh-hero-{{ section.id }} .gh-hero__heading {
      font-size: {{ section.settings.heading_size_desktop }}px;
    }
  }

  .gh-hero-{{ section.id }}
  .gh-hero__description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    font-family: {{ section.settings.body_font.family }}, 
    {{ section.settings.body_font.fallback_families }};
    font-weight: {{ section.settings.body_font.weight }};
    font-style: {{ section.settings.body_font.style }};
    line-height: 1.6;
    margin: 0 0 30px;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 12px 25px;
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-family: {{ section.settings.body_font.family }}, 
    {{ section.settings.body_font.fallback_families }};
    font-weight: bold;
    font-size: 14px;
    display: inline-block;
    border: 2px solid transparent;
    transition: background-color 0.3s ease
    , color 0.3s ease
    , border-color 0.3s ease;
    align-self: flex-start;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__text-column[data-text-align="center"] .gh-hero__button {
    align-self: center;
  }
  .gh-hero-{{ section.id }}
  .gh-hero__text-column[data-text-align="right"] .gh-hero__button {
    align-self: flex-end;
  }
  @media screen and (max-width: 768px) {
