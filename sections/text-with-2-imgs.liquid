      justify-content: flex-start;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="center"] .gh-hero__stats-area {
      justify-content: center;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="right"] .gh-hero__stats-area {
      justify-content: flex-end;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__stats-area {
      flex-direction: column;
      align-items: inherit;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="left"] .gh-hero__stats-area {
      align-items: flex-start;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="center"] .gh-hero__stats-area {
      align-items: center;
    }
    .gh-hero-{{ section.id }}
    .gh-hero__text-column[data-text-align-mobile="right"] .gh-hero__stats-area {
      align-items: flex-end;
    }
  }
