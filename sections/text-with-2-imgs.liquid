    display: block;
    font-size: {{ section.settings.stat_value_size }}px;
    color: {{ section.settings.stat_value_color }};
    font-family: {{ section.settings.body_font.family }}, 
    {{ section.settings.body_font.fallback_families }};
    font-weight: bold;
    line-height: 1.1;
  }

  .gh-hero-{{ section.id }}
