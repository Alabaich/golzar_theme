  .gh-hero-{{ section.id }}.gh-hero__button:focus {
    background-color: {{ section.settings.button_bg_color_hover }};
    color: {{ section.settings.button_text_color_hover }};
    border-color: {{ section.settings.button_border_color_hover }};
  }

  .gh-hero-{{ section.id }}
  .gh-hero__button-arrow {
    margin-left: 8px;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__stats-area {
    display: flex;
    gap: {{ section.settings.stats_gap }}px;
    margin-top: 30px;
    justify-content: flex-start;
  }

  .gh-hero-{{ section.id }}
  .gh-hero__text-column[data-text-align="center"] .gh-hero__stats-area {
    justify-content: center;
  }
  .gh-hero-{{ section.id }}
  .gh-hero__text-column[data-text-align="right"] .gh-hero__stats-area {
    justify-content: flex-end;
  }

