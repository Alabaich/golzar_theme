{%- liquid
  assign collection = collections[section.settings.featured_collection]
  assign products_to_display = section.settings.products_to_show | default: 4
-%}

{% stylesheet %}

  .featured-collection-promo .promo-banner-wrapper {
margin-bottom:25px;

    border-radius: 10px;
  }
  .featured-collection-promo .promo-banner-inner {
    display: flex;
    align-items: center;
    margin: 0 auto;
  }
  .featured-collection-promo .promo-banner-content {
    flex: 1;
    padding-right: 20px;
  }
  .featured-collection-promo .promo-banner-heading {
    font-size: 2.5em;
    margin: 0;
    padding-bottom:25px;
    font-weight: bold;
  }
  .featured-collection-promo .promo-banner-subheading {
    font-size: 1em;
    margin: 0;
padding-bottom:25px;

    line-height: 1.6;
    max-width:480px;
  }
.promo-banner-subheading p{
margin:0
}
  .featured-collection-promo a.promo-banner-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    text-decoration: none;
    font-weight: bold;
    font-size: 16px;
    cursor: pointer;
    line-height: normal;
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  .featured-collection-promo a.promo-banner-button svg {
    width: 10px;
    height: 10px;
    fill: currentColor;
    transition: fill 0.3s ease;
  }

  .featured-collection-promo .promo-banner-image-wrapper {
    flex-basis: 40%;
    max-width: 40%;
  }
  .featured-collection-promo .promo-banner-image {
    display: block;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .featured-collection-promo .section-header {
    font-family: 'Raleway', sans-serif;
    font-size: 36px;
    text-align: left;
    margin-bottom: 40px;
    color: #1c1c1c;
  }

  .featured-collection-promo .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }
  .featured-collection-promo .grid-item.product-card {
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  .featured-collection-promo .product-card__link-image {
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
  }
  .featured-collection-promo .product-card__image-wrapper {
    padding: 0;
    background-color: #f9f9f9;
    position: relative;
  }
  .featured-collection-promo .product-card__image {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: var(--product-image-aspect-ratio, 4 / 3);
    object-fit: cover;
  }
  .featured-collection-promo .product-card__badge-info {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    z-index: 1;
  }
  .featured-collection-promo .badge {
    padding: 3px 8px;
    font-size: 0.8em;
    border-radius: 3px;
    color: #fff;
  }
  .featured-collection-promo .badge--vendor {
    background-color: var(--color-badge-vendor-bg, #555);
  }
  .featured-collection-promo .badge--discount {
    background-color: var(--color-badge-discount-bg, #d9534f);
  }
  .featured-collection-promo .color-accent-1 .badge--vendor {
    background-color: rgba(var(--color-accent-1), 0.8);
    color: var(--color-text-on-accent-1, #fff);
  }
  .featured-collection-promo .color-accent-2 .badge--vendor {
    background-color: rgba(var(--color-accent-2), 0.8);
    color: var(--color-text-on-accent-2, #fff);
  }
  .featured-collection-promo .product-card__info {
    padding: 10px;
    text-align: left;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .featured-collection-promo .product-card__availability {
    font-size: 0.85em;
    margin:0;
padiing-bottom:5px;
  }
  .featured-collection-promo .product-card__availability--in-stock {
    color: #28a745;
  }
  .featured-collection-promo .product-card__availability--out-of-stock {
    color: #dc3545;
  }
  .featured-collection-promo .product-card__title-link {
    text-decoration: none;
    color: inherit;
  }
  .featured-collection-promo .product-card__title {
    font-weight: bold;
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1em;
  }
  .featured-collection-promo .product-card__price-wrapper {
    margin-bottom: 1rem !important;
    font-size: 0.9em;
  }

  .featured-collection-promo .product-card__price-wrapper .price--sale {
    color: #D9534F;
    font-weight: bold;
  }

  .featured-collection-promo .product-card__price-wrapper .price--original {
    color: #777777;
    text-decoration: line-through;
    margin-left: 8px;
    font-size: 0.9em;
  }

  .featured-collection-promo .product-card__form-container {
    display: flex;
    gap: 10px;
    margin-top: auto;
    align-items: center;
  }

  .featured-collection-promo .product-card__form {
    flex-grow: 1;
  }

  .featured-collection-promo .product-card__add-to-cart-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
padding: 14px 20px;
    gap: 8px;
    width: 100%;
    font-size: 1em;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    text-align: center;
  }

  .featured-collection-promo .product-card__add-to-cart-button svg {
    width: 12px;
    height: 12px;
    fill: currentColor;
    transition: fill 0.3s ease;
  }

  .featured-collection-promo .product-card__add-to-cart-button:hover:not(:disabled) {
  }

  .featured-collection-promo .product-card__add-to-cart-button.button--disabled {
    background-color: #ebebeb;
    color: #555555;
    border: 2px solid #d0d0d0;
    cursor: not-allowed;
    opacity: 1;
  }
  .featured-collection-promo .product-card__add-to-cart-button.button--disabled:hover {
    background-color: #ebebeb;
    color: #555555;
    border-color: #d0d0d0;
  }
  .featured-collection-promo .product-card__add-to-cart-button.button--disabled svg {
    fill: #555555;
  }
  .featured-collection-promo .product-card__add-to-cart-button.button--disabled:hover svg {
    fill: #555555;
  }

  .featured-collection-promo .product-card__quick-cart-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    width: 40px;
    height: 40px;
    background-color: #ebebeb;
    border: 2px solid #d0d0d0;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .featured-collection-promo .product-card__quick-cart-button svg {
    width: 20px;
    height: 20px;
    fill: #002642;
    transition: fill 0.3s ease;
  }

  .featured-collection-promo .product-card__quick-cart-button:hover:not(:disabled) {
    background-color: #002642;
    border-color: #002642;
  }
  .featured-collection-promo .product-card__quick-cart-button:hover:not(:disabled) svg {
    fill: #ffffff;
  }

  .featured-collection-promo .product-card__quick-cart-button.button--disabled,
  .featured-collection-promo .product-card__quick-cart-button:disabled {
    background-color: #ebebeb;
    border: 2px solid #d0d0d0;
    cursor: not-allowed;
    opacity: 1;
  }
  .featured-collection-promo .product-card__quick-cart-button.button--disabled svg,
  .featured-collection-promo .product-card__quick-cart-button:disabled svg {
    fill: #777;
  }
  .featured-collection-promo .product-card__quick-cart-button.button--disabled:hover,
  .featured-collection-promo .product-card__quick-cart-button:disabled:hover {
    background-color: #ebebeb;
    border-color: #d0d0d0;
  }
  .featured-collection-promo .product-card__quick-cart-button.button--disabled:hover svg,
  .featured-collection-promo .product-card__quick-cart-button:disabled:hover svg {
    fill: #777;
  }

  .featured-collection-promo .placeholder-svg.product-card__image {
    display: block;
    width: 100%;
    height: auto;
    max-height: 250px;
    aspect-ratio: var(--product-image-aspect-ratio, 1 / 1);
  }

  .featured-collection-promo .custm-collection-discount-header {
    display: flex;
    flex-direction: column;
    row-gap: 20px;
  }

  .featured-collection-promo .custm-collection-discount-header h2 {
    color: #002642;
    margin: 0;
padding-bottom:25px;
  }

  @media (max-width: 990px) {
    .featured-collection-promo .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .featured-collection-promo .promo-banner-inner {
      flex-direction: column;
      text-align: left;
    }
    .featured-collection-promo .promo-banner-content {
      padding-right: 0;
      margin-bottom: 20px;
    }
    .featured-collection-promo .promo-banner-image-wrapper {
      flex-basis: auto;
      max-width: 100%;
      margin: 0 auto;
    }

      .featured-collection-promo .promo-banner-subheading {
        margin-bottom: 0;
      }
  }

  @media (max-width: 750px) {
    .featured-collection-promo .custm-collection-discount-header h3 {
    }
  }

  @media (max-width: 550px) {
    .featured-collection-promo .product-grid {
      grid-template-columns: 1fr;
    }
    .featured-collection-promo .promo-banner-heading {
      font-size: 2em;
    }
    .featured-collection-promo .custm-collection-discount-header h3 {
    }
  }
