{%- liquid
  assign collection = collections[section.settings.featured_collection]
  assign products_to_display = section.settings.products_to_show | default: 4
-%}

{% stylesheet %}
  .featured-collection-promo {
    padding-top: 20px;
    padding-bottom: 20px;
  }
  .promo-banner-wrapper {
    margin-bottom: 30px;
    padding: 30px 40px;
    border-radius: 10px;
  }
  .promo-banner-inner {
    display: flex;
    align-items: center;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  .promo-banner-content {
    flex: 1;
    padding-right: 20px;
  }
  .promo-banner-heading {
    font-size: 2.5em;
    margin-bottom: 0.5em;
    font-weight: bold;
  }
  .promo-banner-subheading {
    font-size: 1em;
    margin: 0 0 1em;
    line-height: 1.6;
  }

  a.promo-banner-button {
    display: inline-block;
    padding: 15px 30px;
    background-color: #ffffff;
    color: #002642;
    text-decoration: none;
    border: 2px solid #002642;
    border-radius: 50px;
    font-weight: bold;
    font-family: 'Arial'
    , sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    cursor: pointer;
    line-height: normal;
    transition: background-color 0.3s ease
    , color 0.3s ease
    , border-color 0.3s ease;
  }

  a.promo-banner-button:hover {
    background-color: #002642;
    color: #ffffff;
    border-color: #ffffff;
  }

  .promo-banner-image-wrapper {
    flex-basis: 40%;
    max-width: 40%;
  }
  .promo-banner-image {
    display: block;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .section-header {
    font-family: 'Raleway'
    , serif;
    font-size: 36px;
    text-align: left;
    margin-bottom: 40px;
    color: #1c1c1c;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }
  .grid-item.product-card {
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  .product-card__link-image {
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
  }
  .product-card__image-wrapper {
    padding: 0;
    background-color: #f9f9f9;
    position: relative;
  }
  .product-card__image {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: var(--product-image-aspect-ratio, 1 / 1);
    object-fit: cover;
  }
  .product-card__badge-info {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    z-index: 1;
  }
  .badge {
    padding: 3px 8px;
    font-size: 0.8em;
    border-radius: 3px;
    color: #fff;
  }
  .badge--vendor {
    background-color: var(--color-badge-vendor-bg, #555);
  }
  .badge--discount {
    background-color: var(--color-badge-discount-bg, #d9534f);
  }
  .color-accent-1 .badge--vendor {
    background-color: rgba(var(--color-accent-1), 0.8);
    color: var(--color-text-on-accent-1, #fff);
  }
  .color-accent-2 .badge--vendor {
    background-color: rgba(var(--color-accent-2), 0.8);
    color: var(--color-text-on-accent-2, #fff);
  }
  .product-card__info {
    padding: 15px;
    text-align: center;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .product-card__availability {
    font-size: 0.85em;
    margin-bottom: 5px;
  }
  .product-card__availability--in-stock {
    color: #28a745;
  }
  .product-card__availability--out-of-stock {
    color: #dc3545;
  }
  .product-card__title-link {
    text-decoration: none;
    color: inherit;
  }
  .product-card__title {
    font-weight: bold;
    margin-top: 0;
    margin-bottom: 8px;
    font-size: 1em;
    min-height: 2.4em;
  }
  .product-card__price-wrapper {
    margin-bottom: 15px;
    font-size: 0.9em;
  }

  .product-card__form-container {
    display: flex;
    gap: 10px;
    margin-top: auto;
    align-items: center;
  }

  .product-card__form {
    flex-grow: 1;
  }

  .product-card__add-to-cart-button {
    display: block;
    width: 100%;
    padding: 12px 15px;
    background-color: #002642;
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    font-size: 0.9em;
    font-weight: bold;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-align: center;
  }

  .product-card__add-to-cart-button:hover:not(:disabled) {
    background-color: #003366;
  }

  .product-card__add-to-cart-button.button--disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }

  .product-card__quick-cart-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    width: 40px;
    height: 40px;
    background-color: #002642;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .product-card__quick-cart-button svg {
    width: 18px;
    height: 18px;
    fill: #ffffff;
  }

  .product-card__quick-cart-button:hover:not(:disabled) {
    background-color: #003366;
  }
  .product-card__quick-cart-button:disabled,
  .product-card__quick-cart-button.button--disabled {
    background-color: #ccc;
    cursor: not-allowed;
    opacity: 0.7;
  }
  .product-card__quick-cart-button:disabled svg,
  .product-card__quick-cart-button.button--disabled svg {
    fill: #777;
  }

  .placeholder-svg.product-card__image {
    display: block;
    width: 100%;
    height: auto;
    max-height: 250px;
    aspect-ratio: var(--product-image-aspect-ratio, 1 / 1);
  }

  @media (max-width: 990px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .promo-banner-inner {
      flex-direction: column;
      text-align: center;
    }
    .promo-banner-content {
      padding-right: 0;
      margin-bottom: 20px;
    }
    .promo-banner-image-wrapper {
      flex-basis: auto;
      max-width: 70%;
      margin: 0 auto;
    }
  }

  @media (max-width: 750px) {
    .section-header {
      font-size: 28px;
    }
  }

  @media (max-width: 550px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
    .promo-banner-heading {
      font-size: 2em;
    }
  }
{% endstylesheet %}

<div
  class="page-width featured-collection-promo"
  data-section-id="{{ section.id }}"
  data-section-type="featured-collection-promo-section">

  {% if section.settings.section_title != blank %}
    <h2 class="section-header" title="{{ section.settings.section_title | escape }}">{{ section.settings.section_title | escape }}</h2>
  {% endif %}

  {% if section.settings.show_promo_banner %}
    <div class="promo-banner-wrapper" style="background-color: {{ section.settings.promo_bg_color }};">
      <div class="promo-banner-inner">
        <div class="promo-banner-content">
          {% if section.settings.promo_heading != blank %}
            <h2
              class="promo-banner-heading"
              style="color: {{ section.settings.promo_heading_color }};"
              title="{{ section.settings.promo_heading }}">{{ section.settings.promo_heading | escape }}</h2>
          {% endif %}
          {% if section.settings.promo_subheading != blank %}
            <div
              class="promo-banner-subheading"
              style="color: {{ section.settings.promo_subheading_color }};"
              title="{{ section.settings.promo_subheading }}">
              {{ section.settings.promo_subheading }}
            </div>
          {% endif %}
          {% if section.settings.promo_button_text != blank and section.settings.promo_button_link != blank %}
            <a
              href="{{ section.settings.promo_button_link }}"
              class="promo-banner-button"
              title="{{ section.settings.promo_button_text | escape }}">
              {{ section.settings.promo_button_text | escape }}
            </a>
          {% endif %}
        </div>
        {% if section.settings.promo_image != blank %}
          <div class="promo-banner-image-wrapper">
            {{ section.settings.promo_image | image_url: width: 1000 | image_tag:
 loading: 'lazy',
 widths: '300, 400, 500, 600, 700, 800, 1000',
 class: 'promo-banner-image'
            }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}

  <div class="product-grid">
    {% if collection != blank and collection.products_count > 0 %}
      {% for product in collection.products limit: products_to_display %}
        {%- liquid
          assign discount_percentage = 0
          if product.compare_at_price > product.price
            assign discount_amount = product.compare_at_price | minus: product.price
            assign discount_percentage = discount_amount | times: 100.0 | divided_by: product.compare_at_price | round
          endif
        -%}
        <div class="grid-item product-card{% if discount_percentage > 0 %} product-card--on-sale{% endif %}">
          <a
            href="{{ product.url | within: collection }}"
            class="product-card__link-image"
            title="{{ product.vendor }}">
            <div class="product-card__image-wrapper">
              {% if product.featured_image %}
                {{ product.featured_image | image_url: width: 500 | image_tag:
 loading: 'lazy',
 widths: '200, 300, 400, 500',
 class: 'product-card__image'
                }}
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              <div class="product-card__badge-info">
                {% if section.settings.show_vendor %}
                  <span class="badge badge--vendor color-{{ settings.sale_badge_color_scheme | default: 'accent-1' }}" title="{{ product.vendor }}">{{ product.vendor }}</span>
                {% endif %}
                {% if discount_percentage > 0 and section.settings.show_discount_badge %}
                  <span class="badge badge--discount">-{{ discount_percentage }}%</span>
                {% endif %}
              </div>
            </div>
          </a>
          <div class="product-card__info">
            {% if section.settings.show_availability %}
              {% if product.selected_or_first_available_variant.available %}
                <p class="product-card__availability product-card__availability--in-stock">{{ 'products.product.in_stock' | t }}</p>
              {% else %}
                <p class="product-card__availability product-card__availability--out-of-stock">{{ 'products.product.sold_out' | t }}</p>
              {% endif %}
            {% endif %}

            <a href="{{ product.url | within: collection }}" class="product-card__title-link">
              <h3 class="product-card__title">{{ product.title | truncate: section.settings.product_title_truncate_length | default: 30 }}</h3>
            </a>

            {% render 'price'
              , product: product
              , price_class: 'product-card__price-wrapper'
              , show_compare_at_price: true %}

            {% if section.settings.show_add_to_cart_button %}
              <div class="product-card__form-container">
                <form
                  action="{{ routes.cart_add_url }}"
                  method="post"
                  enctype="multipart/form-data"
                  class="product-card__form">
                  <input
                    type="hidden"
                    name="id"
                    value="{{ product.selected_or_first_available_variant.id }}">
                  <input
                    type="hidden"
                    name="quantity"
                    value="1"
                    min="1">
                  <button
                    type="submit"
                    class="button product-card__add-to-cart-button{% unless product.selected_or_first_available_variant.available %} button--disabled{% endunless %}"
                    {% unless product.selected_or_first_available_variant.available %}
                    disabled
                    aria-disabled="true"
                    {% endunless %}>
                    {% if product.selected_or_first_available_variant.available %}
                      {{ section.settings.product_button_text | escape }}
                    {% else %}
                      {{ 'products.product.sold_out' | t }}
                    {% endif %}
                  </button>
                </form>
                <button
                  type="button"
                  class="product-card__quick-cart-button{% unless product.selected_or_first_available_variant.available %} button--disabled{% endunless %}"
                  aria-label="{{ 'products.product.add_to_cart' | t }}"
                  data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                  {% unless product.selected_or_first_available_variant.available %}
                  disabled
                  aria-disabled="true"
                  {% endunless %}>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="20"
                    height="20"><path d="M17.218 6.235C17.013 5.438 16.275 4.91 15.42 4.91H8.58c-.855 0-1.593.528-1.798 1.325L4.305 15.085A3.5 3.5 0 0 0 7.702 19h8.596a3.5 3.5 0 0 0 3.397-3.915l-2.478-8.85zM8.58 6.91h6.84l1.798 6.42H6.782l1.798-6.42zM7.702 17a1.5 1.5 0 0 1-1.488-1.675L7.096 10.9H16.904l.882 4.415A1.5 1.5 0 0 1 16.298 17H7.702z" /><circle
                      cx="8.5"
                      cy="20.5"
                      r="1.5" /><circle
                      cx="15.5"
                      cy="20.5"
                      r="1.5" /></svg>
                </button>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% elsif collection == blank %}
      <p class="text-center">{{ 'sections.featured_collection_promo.no_collection_selected' | t }}</p>
      {% for i in (1..products_to_display) %}
        <div class="grid-item product-card">
          <div class="product-card__link-image">
            <div class="product-card__image-wrapper">
              {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg product-card__image' }}
            </div>
          </div>
          <div class="product-card__info">
            <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
            <div class="product-card__price-wrapper">$19.99</div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p class="text-center">{{ 'sections.featured_collection_promo.no_products_in_collection' | t: collection_title: collection.title }}</p>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Unique Promo Slider",
    "tag": "section",
    "class": "section-featured-collection-promo",
    "settings": [
      {
        "type": "header",
        "content": "Promotional Banner"
      },
      {
        "type": "checkbox",
        "id": "show_promo_banner",
        "label": "Show promotional banner",
        "default": true
      },
      {
        "type": "text",
        "id": "promo_heading",
        "label": "Heading",
        "default": "Big Online Sale! 40% OFF!"
      },
      {
        "type": "richtext",
        "id": "promo_subheading",
        "label": "Subheading",
        "default": "<p>Discover a wide range of premium bathroom accessories to elevate your space. From sleek faucets and towel racks to elegant mirrors and organizers.</p>"
      }, {
        "type": "text",
        "id": "promo_button_text",
        "label": "Button text",
        "default": "DISCOVER MORE >"
      }, {
        "type": "url",
        "id": "promo_button_link",
        "label": "Button link"
      }, {
        "type": "image_picker",
        "id": "promo_image",
        "label": "Promo image"
      }, {
        "type": "color",
        "id": "promo_bg_color",
        "label": "Banner background color",
        "default": "#003366"
      }, {
        "type": "color",
        "id": "promo_heading_color",
        "label": "Banner heading color",
        "default": "#FFFFFF"
      }, {
        "type": "color",
        "id": "promo_subheading_color",
        "label": "Banner subheading color",
        "default": "#DDDDDD"
      }, {
        "type": "header",
        "content": "Product Grid"
      }, {
        "type": "text",
        "id": "section_title",
        "label": "Section title for products",
        "default": "Our products"
      }, {
        "type": "collection",
        "id": "featured_collection",
        "label": "Select collection"
      }, {
        "type": "range",
        "id": "products_to_show",
        "min": 2,
        "max": 12,
        "step": 1,
        "label": "Products to show",
        "default": 4,
        "info": "The design is optimized for 4 products per row on desktop."
      }, {
        "type": "range",
        "id": "product_title_truncate_length",
        "min": 10,
        "max": 50,
        "step": 1,
        "label": "Product title truncate length",
        "default": 30
      }, {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": false
      }, {
        "type": "checkbox",
        "id": "show_discount_badge",
        "label": "Show discount % badge",
        "default": true
      }, {
        "type": "checkbox",
        "id": "show_availability",
        "label": "Show availability (In Stock/Sold Out)",
        "default": true
      }, {
        "type": "checkbox",
        "id": "show_add_to_cart_button",
        "label": "Show 'Add to Cart' button",
        "default": true
      }, {
        "type": "text",
        "id": "product_button_text",
        "label": "Product card button text",
        "default": "BUY NOW >"
      }
    ],
    "presets": [
      {
        "name": "Unique Promo Slider",
        "category": "Collection"
      }
    ]
  }
{% endschema %}