<style>
  .overlay-txt-with-img-main .grid--2-col {
    align-items: center;
    gap: 0;
  }

  .overlay-txt-box {
    padding: 30px 40px;
    box-sizing: border-box;
  }

  .overlay-txt-box p {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
    font-size: 16px;
    margin-bottom: 8px;
    font-weight: normal;
  }

  .overlay-txt-box h3 {
    font-family: serif;
    font-size: 42px;
    line-height: 1.2;
    font-weight: bold;
    margin-top: 0;
    margin-bottom: 25px;
  }

  .overlay-txt-box .button.button-primary {
    background-color: #002642 !important;
    color: #ffffff !important;
    padding: 12px 28px;
    border-radius: 50px;
    text-decoration: none;
    display: inline-block;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
    font-weight: bold;
    font-size: 14px;
    text-transform: uppercase;
    border: none;
  }

  .overlay-img-box {
    line-height: 0;
  }

  .overlay-img-box img {
    width: 100%;
    height: auto;
    display: block;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
  }

  .overlay-txt-with-img .grid__item:first-child {
      display: flex;
      flex-direction: column;
      justify-content: center;
  }

  @media (max-width: 768px) {
    .overlay-txt-with-img-main .grid--2-col {
      grid-template-columns: 1fr;
    }
    .overlay-img-box img {
      border-top-right-radius: 0;
      border-bottom-left-radius: 15px;
    }
    .overlay-txt-box {
      text-align: center;
    }
  }

</style>

<div class="overlay-txt-with-img-main">
  <div class="overlay-txt-with-img-inn">
    <div class="grid--2-col">
      <div class="grid__item">
        <div class="overlay-txt-box"{% if section.settings.bgcolor != blank %} style="background-color: {{ section.settings.bgcolor }};"{% endif %}>
          <div class="overlay-txt-box-in">
            {% if section.settings.subtitle != blank %}
            <p style="color: {{ section.settings.subtitle_color }};">{{ section.settings.subtitle }}</p>
            {% endif %}
            {% if section.settings.title != blank %}
            <h3 style="color: {{ section.settings.title_color }};">{{ section.settings.title }}</h3>
            {% endif %}
            {% if section.settings.btn != blank %}
            <a href="{{ section.settings.btn_link }}" class="button button-primary">{{ section.settings.btn }}</a>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="grid__item">
        {% if section.settings.image != blank %}
        <div class="overlay-img-box">
          <img 
            src="{{ section.settings.image | image_url: width: section.settings.image.width, height: section.settings.image.height }}" 
            alt="{{ section.settings.image.alt | default: 'Promotional image' }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        </div>
        {% endif %}

        {% if section.blocks.size > 0 %}
        <ul class="logo-contact">
          {%- for block in section.blocks -%}
          {% if block.settings.logo_image != blank %}
          <a href="{{ block.settings.logo_link }}">
            <li>
              <img 
                src="{{ block.settings.logo_image | image_url: width: block.settings.logo_image.width, height: block.settings.logo_image.height }}" 
                alt="{{ block.settings.logo_image.alt | default: 'Logo' }}"
                width="{{ block.settings.logo_image.width }}"
                height="{{ block.settings.logo_image.height }}"
              >
            </li>
          </a>
          {% endif %}
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Overlay Image Text",
    "class": "section overlay-txt-with-img",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Text block"
      },
      {
        "type": "color",
        "id": "bgcolor",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Need help?"
      },
      {
        "type": "color",
        "id": "subtitle_color",
        "label": "Subtitle color",
        "default": "#555555"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Request a free consultation and price estimate!"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#111111"
      },
      {
        "type": "text",
        "id": "btn",
        "label": "Button",
        "default": "CONTACT US >"
      },
      {
        "type": "color",
        "id": "btn_color",
        "label": "Button text color",
        "default": "#ffffff"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      },
      {
        "type": "header",
        "content": "Image block"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Logo Image"
          },
          {
            "type": "url",
            "id": "logo_link",
            "label": "Logo link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Overlay Image Text",
        "category": "Image"
      }
    ]
  }
{% endschema %}