  "name": "Blog Posts Grid",
  "tag": "section",
  "class": "shopify-section-blog-posts",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Learn more about our popular products"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 18,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 28
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#222222"
    },
    {
      "type": "blog",
      "id": "blog_handle",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "posts_to_show",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Number of posts to show",
      "default": 7 
    },
    {
      "type": "header",
      "content": "Grid Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5, "info": "If 5 columns and 8 posts are selected, the first 5 posts will be in a row, and the next 3 will be wider. If 4 columns and 7 posts are selected, the first 4 posts will be in a row, and the next 3 will be wider.", // MODIFIED max and info
      "step": 1,
      "label": "Columns on desktop (990px+)",
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Columns on tablet (750px - 989px)",
      "default": 2
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Gap between cards",
      "default": 30
    },
    {
      "type": "header",
      "content": "Card Content"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show featured image",
      "default": true
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        { "value": "natural", "label": "Natural" },
        { "value": "1/1", "label": "1:1 (Square)" },
        { "value": "4/3", "label": "4:3" },
        { "value": "16/9", "label": "16:9" },
        { "value": "2/3", "label": "2:3 (Portrait)" },
        { "value": "3/4", "label": "3:4 (Portrait)" }
      ],
      "default": "4/3",
      "info": "'Natural' uses the original image aspect ratio. Non-natural options use CSS aspect-ratio."
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show publication date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show excerpt",
      "default": true
    },
    {
      "type": "range",
      "id": "excerpt_length",
      "min": 5,
      "max": 50,
      "step": 1,
      "label": "Excerpt length (words)",
      "default": 12
