{%- liquid
  assign settings = section.settings
  assign brand_title = settings.brand_title
  assign brand_subtitle = settings.brand_subtitle
  assign brand_link = settings.brand_link
  assign hero_image = settings.hero_image
  assign button_text = settings.button_text
-%}

{%- style -%}
  .brand-hero-section-{{ section.id }} {
    --section-padding-top: {{ settings.padding_top | default: 60 }}px;
    --section-padding-bottom: {{ settings.padding_bottom | default: 60 }}px;
    --content-gap: {{ settings.content_gap | default: 30 }}px;
    --header-bottom-margin: {{ settings.header_bottom_margin | default: 40 }}px;

    background-color: #FFFFFF;
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    font-family: 'Raleway'
    , sans-serif;
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__header {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--content-gap);
    margin-bottom: var(--header-bottom-margin);
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__title-wrapper {
    flex: 3 1 60%;
    min-width: 280px;
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__title {
    line-height: 1.25;
    color: #101828;
    text-align: left;
    margin: 0;
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__cta-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1 1 30%;
    min-width: 260px;
    max-width: 320px;
    text-align: right;
    padding-top: 3px;
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__subtitle {
    line-height: 1.6;
    color: #475467;
    margin: 0;
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: #072A4A;
    color: #FFFFFF;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    padding: 10px 20px;
    border-radius: 8px;
    transition: opacity 0.3s ease
    , transform 0.3s ease;
    align-self: flex-end;
    line-height: 1.2;
    border: none;
    cursor: pointer;
    margin-top: 15px;
  }
  .brand-hero-section-{{ section.id }}
  .brand-hero__cta .arrow {
    margin-left: 8px;
    display: inline-block;
  }

  .brand-hero-section-{{ section.id }}.brand-hero__cta:hover {
    opacity: 0.85;
    transform: translateY(-2px);
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__image-container {
    margin-top: 0;
  }

  .brand-hero-section-{{ section.id }}
  .brand-hero__image {
    width: 100%;
    height: auto;
    border-radius: 20px;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 768px) {
    .brand-hero-section-{{ section.id }} .brand-hero__header {
      flex-direction: column;
      align-items: stretch;
      gap: 20px;
    }

    .brand-hero-section-{{ section.id }}
    .brand-hero__title-wrapper
    , .brand-hero-section-{{ section.id }}
    .brand-hero__cta-wrapper {
      flex-basis: auto;
      text-align: {{ settings.mobile_text_align | default: 'left' }};
      max-width: none;
    }
    .brand-hero-section-{{ section.id }}
    .brand-hero__cta-wrapper {
      padding-top: 0;
    }

    .brand-hero-section-{{ section.id }}
    .brand-hero__cta {
      align-self: {{ settings.mobile_button_align | default: 'flex-start' }};
      margin-top: 15px;
    }

    .brand-hero-section-{{ section.id }}
    .brand-hero__cta {
      padding: 9px 18px;
    }
  }
{%- endstyle -%}

<div class="brand-hero-section-{{ section.id }}">
  <div class="page-width">
    <div class="brand-hero__header">
      <div class="brand-hero__title-wrapper">
        {%- if brand_title != blank -%}
          <h2 class="brand-hero__title" title="{{ brand_title | escape }}">{{ brand_title | newline_to_br }}</h2>
        {%- endif -%}
      </div>
      <div class="brand-hero__cta-wrapper">
        {%- if brand_subtitle != blank -%}
          <p class="brand-hero__subtitle" title="{{ brand_subtitle | escape }}">{{ brand_subtitle }}</p>
        {%- endif -%}
        {%- if button_text != blank and brand_link != blank -%}
          <a href="{{ brand_link }}" class="brand-hero__cta" title="{{ button_text | escape }}" aria-label="{{ button_text | escape }}">
            {%- if settings.show_button_arrow -%}
              <span class="arrow">&gt;</span>
            {%- endif -%}
            {{ button_text | escape }}
            {%- if settings.show_button_arrow -%}
              <span class="arrow">&gt;</span>
            {%- endif -%}
          </a>
        {%- endif -%}
      </div>
    </div>
    {%- if hero_image != blank -%}
      <div class="brand-hero__image-container">
        <img
          src="{{ hero_image | image_url: width: hero_image.width }}"
          alt="{{ hero_image.alt | default: brand_title | escape }}"
          width="{{ hero_image.width }}"
          height="{{ hero_image.height }}"
          loading="lazy"
          class="brand-hero__image">
      </div>
    {%- elsif settings.show_onboarding_image -%}
      <div class="brand-hero__image-container" style="aspect-ratio: 16/9; display: flex; align-items: center; justify-content: center; background-color: #f0f0f0; border-radius: 20px;">
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Brand Hero Advanced",
    "tag": "section",
    "class": "shopify-section--brand-hero-adv",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "textarea",
        "id": "brand_title",
        "label": "Heading",
        "default": "Bath and kitchen essentials showroom"
      },
      {
        "type": "richtext",
        "id": "brand_subtitle",
        "label": "Subtitle",
        "default": "<p>Express your personality with our range of styles and finishes.</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Discover Brand"
      }, {
        "type": "url",
        "id": "brand_link",
        "label": "Button Link"
      }, {
        "type": "checkbox",
        "id": "show_button_arrow",
        "label": "Show arrow on button",
        "default": true
      }, {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      }, {
        "type": "checkbox",
        "id": "show_onboarding_image",
        "label": "Show placeholder if no image",
        "default": true
      }, {
        "type": "header",
        "content": "Layout & Spacing"
      }, {
        "type": "range",
        "id": "content_gap",
        "label": "Gap between heading and CTA columns (Desktop)",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 30
      }, {
        "type": "range",
        "id": "header_bottom_margin",
        "label": "Space below header/CTA block",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 40
      }, {
        "type": "header",
        "content": "Section Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 150,
        "step": 5,
        "unit": "px",
        "label": "Top Padding",
        "default": 60
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 150,
        "step": 5,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 60
      }, {
        "type": "header",
        "content": "Mobile Layout"
      }, {
        "type": "select",
        "id": "mobile_text_align",
        "label": "Text Alignment on Mobile",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "left"
      }, {
        "type": "select",
        "id": "mobile_button_align",
        "label": "Button Alignment on Mobile",
        "options": [
          {
            "value": "flex-start",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "flex-end",
            "label": "Right"
          }
        ],
        "default": "flex-start"
      }
    ],
    "presets": [
      {
        "name": "Brand Hero Advanced"
      }
    ]
  }
{% endschema %}