      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"}
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "mobile_button_align",
      "label": "Button Alignment on Mobile",
       "options": [
        {"value": "flex-start", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "flex-end", "label": "Right"}
      ],
      "default": "flex-start"
    }
  ],
  "presets": [
    {
      "name": "Brand Hero Advanced"
    }
  ]
}
