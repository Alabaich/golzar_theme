<style>
  .masonry-parent-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
    width: 100%;
  }

  .masonry-4-items-{{ section.id }} {
    grid-template-rows: repeat(2, 325px);
  }

  .masonry-6-items-{{ section.id }} {
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 325px);
  }

  .masonry-item {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 10px;
    display: flex;
    text-decoration: none;
    color: inherit;
  }

  .masonry-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    display: block;
  }

  .masonry-item:hover img {
    transform: scale(1.05);
  }

  .div1 { grid-area: 1 / 1 / 2 / 3; }
  .div2 { grid-area: 1 / 3 / 2 / 4; }
  .div3 { grid-area: 2 / 1 / 3 / 3; }
  .div4 { grid-area: 2 / 3 / 3 / 4; }

  .masonry-6-items-{{ section.id }} .div1 { grid-area: 1 / 1 / 3 / 3; }
  .masonry-6-items-{{ section.id }} .div2 { grid-area: 3 / 1 / 4 / 2; }
  .masonry-6-items-{{ section.id }} .div3 { grid-area: 3 / 2 / 4 / 3; }
  .masonry-6-items-{{ section.id }} .div4 { grid-area: 1 / 3 / 2 / 4; }
  .masonry-6-items-{{ section.id }} .div5 { grid-area: 1 / 4 / 2 / 5; }
  .masonry-6-items-{{ section.id }} .div6 { grid-area: 2 / 3 / 4 / 5; }

  .masonry-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
    color: #fff;
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .masonry-item:hover .masonry-overlay {
    opacity: 1;
  }

  .masonry-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0 0 5px;
  }

  .masonry-text {
    font-size: 1rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .masonry-parent-{{ section.id }} {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .masonry-parent-{{ section.id }} > * {
      height: 200px;
    }

    .masonry-overlay {
      opacity: 1;
    }
  }
</style>

{% assign limit_count = 4 %}
{% if section.settings.enable_6_items %}
  {% assign limit_count = 6 %}
{% endif %}

<div class="pageWidth page-width">
  {% if section.settings.heading != blank %}
    <h2 style="text-align: {{ section.settings.heading_align }}; margin-bottom: 30px;">
      {{ section.settings.heading | escape }}
    </h2>
  {% endif %}

  <div class="masonry-parent-{{ section.id }} {% if section.settings.enable_6_items %}masonry-6-items-{{ section.id }}{% else %}masonry-4-items-{{ section.id }}{% endif %}">
    {% for block in section.blocks limit: limit_count %}
      <a
        href="{{ block.settings.link | default: '#' }}"
        class="masonry-item div{{ forloop.index }}"
        {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 1200 | image_tag: 
            loading: 'lazy', 
            widths: '400, 600, 800, 1200'
          }}
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}

        {% if block.settings.title != blank or block.settings.text != blank %}
          <div class="masonry-overlay">
            {% if block.settings.title != blank %}
              <h3 class="masonry-title">{{ block.settings.title | escape }}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
              <p class="masonry-text">{{ block.settings.text | escape }}</p>
            {% endif %}
          </div>
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Custom Masonry Grid",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      },
      {
        "type": "select",
        "id": "heading_align",
        "label": "Heading Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "center"
      },
      {
        "type": "checkbox",
        "id": "enable_6_items",
        "label": "Enable 6 Items Layout",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Grid Image",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Overlay Title"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Overlay Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Masonry Grid",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}